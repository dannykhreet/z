 DROP FUNCTION public.add_assessment_skillinstruction_item(int4, int4, int4, int4, int4, int4, bool, timestamptz, int4, int4);

CREATE OR REPLACE FUNCTION public.add_assessment_skillinstruction_item(_companyid integer, _userid integer, _assessmentid integer, _assessmentskillinstructionid integer, _workinstructiontemplateid integer, _workinstructiontemplateitemid integer, _iscompleted boolean, _completedat timestamp with time zone DEFAULT NULL::timestamp with time zone, _completedforid integer DEFAULT NULL::integer, _score integer DEFAULT NULL::integer,
    _assessorid integer DEFAULT NULL::integer,
    _scoredat timestamp DEFAULT NULL::timestamp)
 RETURNS integer
 LANGUAGE plpgsql
AS $function$
	DECLARE
		_id int4;
	BEGIN
	INSERT INTO assessment_skillinstruction_items (id, company_id, assessment_id, assessment_skillinstruction_id, workinstruction_template_id, workinstruction_template_item_id, completed_at, completed_for_id, created_at, modified_at, created_by_id, modified_by_id, score, is_active, is_completed,assessor_id,scored_at)
	VALUES (DEFAULT, _companyid, _assessmentid, _assessmentskillinstructionid, _workinstructiontemplateid, _workinstructiontemplateitemid, _completedat, _completedforid, now()::timestamp, now()::timestamp, _userid, _userid, _score, true, _iscompleted,_assessorid,_scoredat)
RETURNING id INTO _id;
RETURN _id;
END$function$
;




