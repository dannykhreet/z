DROP FUNCTION public.change_assessment_skillinstruction_item(int4, int4, int4, int4, int4, int4, int4, bool, timestamptz, int4, int4);

CREATE OR REPLACE FUNCTION public.change_assessment_skillinstruction_item(_id integer, _companyid integer, 
									 _userid integer, _assessmentid integer, 
									 _assessmentskillinstructionid integer, _workinstructiontemplateid integer,
									 _workinstructiontemplateitemid integer, _iscompleted boolean, 
									 _completedat timestamp with time zone DEFAULT NULL::timestamp with time zone, 
									 _completedforid integer DEFAULT NULL::integer, _score integer DEFAULT NULL::integer, 
									 _assessor_id integer DEFAULT NULL::integer, _scored_at timestamp with time zone DEFAULT NULL::timestamp with time zone)
 RETURNS integer
 LANGUAGE plpgsql
AS $function$
	DECLARE
		_rowcount int4;
	BEGIN
	UPDATE assessment_skillinstruction_items 
SET
	completed_at = _completedat,
	completed_for_id = _completedforid,
	is_completed = _iscompleted,
	score = _score,
    assessor_id = _assessor_id,
    scored_at  = _scored_at,
	modified_by_id = _userid,
	modified_at = now()::timestamp
	WHERE id = _id AND company_id = _companyid AND assessment_id = _assessmentid;
GET DIAGNOSTICS _rowcount = ROW_COUNT;
	 RETURN _rowcount;
END$function$
;

