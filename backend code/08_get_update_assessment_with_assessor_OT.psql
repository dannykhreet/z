 LANGUAGE plpgsql
 STABLE
AS $function$BEGIN
	RETURN QUERY
SELECT  
A.id,
A.signatures,
A.completed_for_id,
A.completed_at::timestamp,
CONCAT(PUF.first_name, ' ', PUF.last_name)::varchar AS completedfor,
PUF.picture AS completedfor_picture,
A.assessor_id,
CONCAT(PUA.first_name, ' ', PUA.last_name)::varchar AS assessor,
