 RETURNS TABLE(id integer, assessment_id integer, assessment_template_skillinstruction_id integer, assessment_skillinstruction_id integer, completed_for_id integer, completed_at timestamp without time zone, completedfor character varying, is_completed boolean, assessor_id integer,score integer, company_id integer, assessment_template_id integer, workinstruction_template_id integer, workinstruction_template_item_id integer, index integer, created_at timestamp without time zone, modified_at timestamp without time zone, created_by_id integer, modified_by_id integer, created_by character varying, modified_by character varying, media text, name character varying, description text, attachments text,start_at timestamp without time zone,
    end_at timestamp without time zone)
 LANGUAGE plpgsql
 STABLE
AS $function$BEGIN
	RETURN QUERY
SELECT 
ASSI.id, 
ASS.assessment_id, 
ASS.assessment_template_skillinstruction_id, 
ASS.id AS assessment_skillinstruction_id,
ASSI.completed_for_id, 
ASSI.completed_at::timestamp, 
CONCAT(PUF.first_name, ' ', PUF.last_name)::varchar AS completedfor,
ASS.is_completed,
ASSI.assessor_id,
ASSI.score, 
A.company_id,
A.assessment_template_id,
ASTS.workinstruction_template_id,
ASSI.workinstruction_template_item_id,
WITI.index,
ASSI.created_at,
ASSI.modified_at,
ASSI.created_by_id,
ASSI.modified_by_id,
CONCAT(PUC.first_name, ' ', PUC.last_name)::varchar AS created_by,
CONCAT(PUM.first_name, ' ', PUM.last_name)::varchar AS modified_by,
WITI.media,
WITI.name,
WITI.description,
WITI.attachments,
A.start_at,
A.end_at
FROM assessments A
INNER JOIN assessment_skillinstructions ASS ON ASS.assessment_id = A.id AND ASS.company_id = _companyid
INNER JOIN assessment_skillinstruction_items ASSI ON ASSI.assessment_skillinstruction_id = ASS.id AND ASSI.company_id = _companyid
INNER JOIN assessment_templates AST ON AST.id = A.assessment_template_id AND AST.company_id = _companyid
INNER JOIN assessment_template_skillinstructions ASTS ON ASTS.assessment_template_id = AST.id AND ASTS.company_id = _companyid AND ASTS.id = ASS.assessment_template_skillinstruction_id
INNER JOIN workinstruction_templates WIT ON WIT.id = ASTS.workinstruction_template_id AND WIT.instruction_type = 1 AND WIT.company_id = _companyid
INNER JOIN workinstruction_template_items WITI ON WITI.workinstruction_template_id = WIT.id AND WITI.id = ASSI.workinstruction_template_item_id AND WITI.company_id = _companyid 
INNER JOIN profiles_user PUC ON PUC.id = ASS.created_by_id AND PUC.company_id = _companyid
INNER JOIN profiles_user PUM ON PUM.id = ASS.modified_by_id AND PUM.company_id = _companyid
LEFT JOIN profiles_user PUF ON PUF.id = ASSI.completed_for_id AND PUF.company_id = _companyid
WHERE A.company_id = _companyid AND AST.company_id = _companyid AND A.is_active = true 
AND (A.id = _assessmentid OR _assessmentid IS NULL)
AND (EXISTS ( 
		SELECT A2.id
		FROM assessments A2
		INNER JOIN assessment_templates AST2 ON AST2.id = A2.assessment_template_id
		WHERE AST.company_id = _companyid AND A2.is_active = true AND A2.company_id = _companyid
		AND (EXISTS (SELECT areas.id FROM get_area_nodes_from_root_to_leaf(_companyid, _areaid) areas WHERE areas.id = AST2.area_id) OR _areaid= 0) 
		AND (EXISTS (SELECT allowedtemplates.id FROM get_user_allowed_assessmenttemplateids(_companyid, _userid) allowedtemplates WHERE allowedtemplates.id = AST2.id) OR _userid = 0) 
		AND (AST2.assessment_type = _assessmenttype OR _assessmenttype IS NULL)
		AND (AST2.role = _role OR _role IS NULL)
		AND (A2.completed_at::timestamp < get_timestamp_without_companytimezone(_companyid ,_timestamp) OR _timestamp IS NULL)
		AND (A2.completed_at >= get_timestamp_without_companytimezone(_companyid ,_starttimestamp) OR _starttimestamp IS NULL)
		AND (A2.completed_at <= get_timestamp_without_companytimezone(_companyid ,_endtimestamp) OR _endtimestamp IS NULL)
		AND (A2.completed_at > (NOW()::date - CONCAT(_timespanindays,' days')::interval) OR _timespanindays = 0) -- note when partial items can be submitted, this must change
		AND (A2.is_completed = _iscompleted OR _iscompleted IS NULL)
		AND (A2.completed_for_id = _completedforid OR _completedforid IS NULL)
		AND (A2.assessment_template_id = _templateid OR _templateid IS NULL)
		AND (A2.id = _assessmentid OR _assessmentid IS NULL)
		ORDER BY A2.completed_at, AST2.name ASC, AST2.id
		LIMIT CASE WHEN (_limit > 0) THEN _limit END 
		OFFSET CASE WHEN (_offset > 0) THEN _offset END
))
ORDER BY ASS.assessment_id, ASTS.index, ASTS.assessment_template_id, ASTS.workinstruction_template_id
;END$function$
;



