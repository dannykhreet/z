@{
    void GetIconAndColor(string Status, out string icon, out string color)
    {
        switch (Status.ToLower())
        {
            case "ok":
                icon = "thumb_up";
                color = "ok";
                break;

            case "skipped":
                icon = "fast_forward";
                color = "skip";
                break;
            default:
                icon = "thumb_down";
                color = "not-ok";
                break;
        }
    }

    var dir = Settings.IsRightToLeftLanguage ? "rtl" : "ltr";

    string GetTagBackgroundColor(string colorCode)
    {
        var color = "#D3D3D3";
        if (!colorCode.IsNullOrEmpty())
        {
            if (colorCode.StartsWith("#"))
                color = colorCode;
            else
                color = "#" + colorCode;
        }
        return color;
    }

    string GetIconClass(string iconStyle)
    {
        if (iconStyle == "solid")
            return "iconSolidPro";

        return "iconRegularPro";
    }
    string GetStageClass(bool isHeaderVisible)
    {
        if (isHeaderVisible)
            return "stage";

        return "";
    }
}
