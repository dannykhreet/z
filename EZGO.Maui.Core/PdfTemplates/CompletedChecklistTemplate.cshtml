<body>
    <div>
        <h2 class="wrap-content">@Model.Name</h2>

        <div class="header-content">
            <p><strong>@(TranslateExtension.GetValueFromDictionary("GENERATE_PDF_DATE_AND_TIME")):</strong> @(Model.LocalSignedAt.ToString(PdfConstants.GetDateTimeFormat(), null))</p>
            <p>
                <strong>@(TranslateExtension.GetValueFromDictionary("SIGNED_CHECHLIST_COMPLETED_BY"))</strong>
                @Model.FirstSignature.SignedBy
                @if (Model.SecondSignature != null)
                {
                    @Model.SecondSignature.SignedBy
                }
            </p>
        </div>

        @if (Model.Tags != null && Model.Tags.Any())
        {
            <p class="wrap-content">
                <tr>
                    <td class="no-padding"></td>
                    <td class="no-padding">
                        <div class="tagsList">
                            @foreach (var tag in Model.Tags)
                            {
                                var backgroundColor = GetTagBackgroundColor(tag.ColorCode);
                                <div class="tagItem" style="background-color: @backgroundColor;">
                                    @if (!tag.IconName.IsNullOrEmpty())
                                    {
                                        <i class="tagIcon @GetIconClass(tag.IconStyle)">@tag.IconName</i>
                                    }
                                    <span class="text">@tag.Name</span>
                                </div>
                            }
                        </div>
                    </td>
                </tr>
            </p>
        }
    </div>
    @if (Model.OpenFieldsProperties != null && Model.OpenFieldsProperties.Count() > 0)
    {
        <strong>@(TranslateExtension.GetValueFromDictionary("OPEN_FIELDS"))</strong>

        <div class="open-fields-container">
            @for (int openFieldIndex = 0; openFieldIndex < Model.OpenFieldsPropertyUserValues.Count(); openFieldIndex++)
            {
                var property = Model.OpenFieldsProperties[openFieldIndex];
                var title = property.TitleDisplay;
                var isRequired = property.IsRequired;
                var fieldValue = Model.OpenFieldsPropertyUserValues[openFieldIndex].GetFieldValue();
                fieldValue ??= string.Empty;

                <div class="open-field-item">
                    <p class="wrap-content">
                        @if (isRequired)
                        {
                            <span style="color:red">*</span>
                        }
                        @title: <span class="openfieldstext">@fieldValue</span>
                    </p>
                </div>
            }
        </div>
    }


    <hr />
    @{ var i = 0; }
    @if (!Model.HasStages && Model.Tasks != null && Model.Tasks.Count() > 0)
    {
        foreach (var task in Model.Tasks)
        {
            <div style="page-break-before: avoid;">
                @{
                    var imageUrl = @ImageHelpers.GetFullImageUrlFromName(task.Picture);
                    GetIconAndColor(task.Status, out var icon, out var colorClass);
                }
                <h3>@(i + 1) @task.Name</h3>

                <div style="display: flex; align-items: center;">
                    <div style="flex-grow: 1; display: flex; align-items: center;">
                        <img alt="placeholder" src="@imageUrl" style="width: 144px; height: 96px; margin-right: 10px;" />
                        <div style="justify-content: center; display: flex; flex-direction: column;">
                            @if (task.Signature != null)
                            {
                                <p style="font-size: 12px">
                                    <strong>@(TranslateExtension.GetValueFromDictionary("TASK_DETAIL_MARKED")) @(TranslateExtension.GetValueFromDictionary("TASK_DETAIL_MARKED_ONTASK_DETAIL_MARKED_ON"))</strong> @(task.LocalSignedAt.ToString(PdfConstants.GetDateTimeFormat(), null)) by @(task.Signature.SignedBy)
                                </p>
                            }

                            @if (task.Tags != null && task.Tags.Any())
                            {
                                <div class="tagsList" style="margin-top: 5px;">
                                    @foreach (var tag in task.Tags)
                                    {
                                        var backgroundColor = GetTagBackgroundColor(tag.ColorCode);
                                        <div class="tagItem" style="background-color: @backgroundColor;">
                                            @if (!tag.IconName.IsNullOrEmpty())
                                            {
                                                <i class="tagIcon @GetIconClass(tag.IconStyle)">@tag.IconName</i>
                                            }
                                            <span class="text">@tag.Name</span>
                                        </div>
                                    }
                                </div>

                            }
                        </div>
                    </div>

                    <div style="display: flex; flex-direction: row; align-items: center; margin-left: auto; position: relative;">
                        @if (task.HasCommentsOrActions)
                        {
                            <div class="status-icon-box skip" style="margin-right: 5px;">
                                <i class="material-icons" style="text-align: center; font-size: 15px;">flash_on</i>
                            </div>
                        }
                        @if (task.HasPictureProof)
                        {
                            <div class="camera-icon-box-small @colorClass">
                                <i class="material-icons" style="text-align: center; font-size: 8px;">photo_camera</i>
                            </div>
                        }
                        <div class="status-icon-box @colorClass">
                            <i class="material-icons" style="text-align: center; font-size: 15px;">@icon</i>
                        </div>
                    </div>
                </div>

                @if (task.UserPropertyList != null && task.UserPropertyList.Any())
                {
                    <div>
                        @foreach (var property in task.UserPropertyList)
                        {
                            <p class="propertytext" style="font-size: 12px"><strong>@property.DisplayTitleString</strong>: @property.GetUserValueString() @property.DisplayFooterString @(TranslateExtension.GetValueFromDictionary("TASK_DETAIL_MARKED_ON")) @((property.LocalRegisteredAt ?? property.LocalModifiedAt).ToString(PdfConstants.GetDateTimeFormat(), null)) @(TranslateExtension.GetValueFromDictionary("TASK_DETAIL_MARKED_BY")) @property.ModifiedBy</p>
                        }
                    </div>
                }

                @if (task.PictureProofMediaItems != null && task.PictureProofMediaItems.Any())
                {
                    <div>
                        @foreach (var pictureProof in task.PictureProofMediaItems)
                        {
                            <div style="display: inline-flex">
                                <div class="status-icon-box @colorClass" style="display: flex; align-items: center;">
                                    <i class="material-icons" style="font-size: 15px">photo_camera</i>
                                </div>
                                <p><strong>@(TranslateExtension.GetValueFromDictionary("GENERATE_PDF_CREATED")):</strong> @(pictureProof.CreatedAt.ToString(PdfConstants.GetDateTimeFormat(), null))</p>
                                @{
                                    var pictureSrc = ImageHelpers.GetFullImageUrlFromName(pictureProof.PictureUrl);
                                    <img alt="placeholder" src="@pictureSrc" style="height: 96px; margin: 10px;" />
                                }
                            </div>
                        }
                    </div>
                    @*<div class="status-icon-box @colorClass"
                             style="display: flex; align-items: center; margin-right: auto; margin-top: 10px">
                            <i class="material-icons" style="font-size: 15px">photo_camera</i>
                        </div>
                        <div style="display: flex; flex-wrap:wrap; justify-content: start; margin-top: 10px">
                            @foreach (var pictureProof in task.PictureProofMediaItems)
                            {
                                var pictureSrc = ImageHelpers.GetFullImageUrlFromName(pictureProof.PictureUrl);
                                <img alt="placeholder" src="@pictureSrc" style="height: 96px; margin: 10px;" />
                            }
                        </div>*@
                }

                @if (task.Actions != null && task.Actions.Any())
                {
                    <h3>@(TranslateExtension.GetValueFromDictionary("ACTION_SCREEN_TITLE"))</h3>
                    foreach (var action in task.Actions)
                    {
                        <div style="page-break-inside: avoid">

                            <p><strong>@(TranslateExtension.GetValueFromDictionary("ACTION_SCREEN_TITLE")):</strong> @action.Comment</p>

                            <p><strong>@(TranslateExtension.GetValueFromDictionary("GENERATE_PDF_COMMENT")):</strong> @action.Description</p>

                            <p><strong>@(TranslateExtension.GetValueFromDictionary("ACTION_RESOURCES_EDITED")):</strong> @action.AssignedResources</p>

                            <p><strong>@(TranslateExtension.GetValueFromDictionary("GENERATE_PDF_CREATED")):</strong> @(action.LocalCreatedAt.ToString(PdfConstants.GetDateTimeFormat(), null))</p>

                            <p><strong>@(TranslateExtension.GetValueFromDictionary("ACTION_DATE_EDITED")):</strong> @(action.LocalDueDate.ToString(PdfConstants.GetDateTimeFormat(), null))</p>

                            @if (action.Tags != null && action.Tags.Any())
                            {
                                <div class="tagsList" style="margin-top: 5px;">
                                    @foreach (var tag in action.Tags)
                                    {
                                        var backgroundColor = GetTagBackgroundColor(tag.ColorCode);
                                        <div class="tagItem" style="background-color: @backgroundColor;">
                                            @if (!tag.IconName.IsNullOrEmpty())
                                            {
                                                <i class="tagIcon @GetIconClass(tag.IconStyle)">@tag.IconName</i>
                                            }
                                            <span class="text">@tag.Name</span>
                                        </div>
                                    }
                                </div>

                            }

                            @if (action.Images != null && action.Images.Any())
                            {
                                <div style="display: flex; flex-wrap: wrap; justify-content: start; margin-top: 10px">
                                    @foreach (var image in action.Images)
                                    {
                                        var pictureSrc = ImageHelpers.GetFullImageUrlFromName(image);
                                        <img alt="placeholder" src="@pictureSrc" style="height: 96px; margin: 10px;" />
                                    }
                                </div>
                            }
                        </div>

                    }
                }

                @if (task.Comments != null && task.Comments.Any())
                {
                    <h3>@(TranslateExtension.GetValueFromDictionary("GENERATE_PDF_COMMENT"))</h3>
                    foreach (var comment in task.Comments)
                    {
                        <div style="page-break-inside: avoid">


                            <p><strong>@(TranslateExtension.GetValueFromDictionary("GENERATE_PDF_COMMENT")):</strong> @comment.CommentText</p>
                            <p><strong>@(TranslateExtension.GetValueFromDictionary("GENERATE_PDF_CREATED")):</strong> @comment.CommentDate</p>

                        </div>
                        if (comment.Tags != null && comment.Tags.Any())
                        {
                            <div class="tagsList" style="margin-top: 5px;">
                                @foreach (var tag in comment.Tags)
                                {
                                    var backgroundColor = GetTagBackgroundColor(tag.ColorCode);
                                    <div class="tagItem" style="background-color: @backgroundColor;">
                                        @if (!tag.IconName.IsNullOrEmpty())
                                        {
                                            <i class="tagIcon @GetIconClass(tag.IconStyle)">@tag.IconName</i>
                                        }
                                        <span class="text">@tag.Name</span>
                                    </div>
                                }
                            </div>

                        }

                        if (comment.Attachments != null && comment.Attachments.Any())
                        {
                            <div style="display: flex; flex-wrap:wrap; justify-content: start; margin-top: 10px">
                                @foreach (var image in comment.Attachments)
                                {
                                    var pictureSrc = ImageHelpers.GetFullImageUrlFromName(image);
                                    <img alt="placeholder" src="@pictureSrc" style="height: 96px; margin: 10px;" />
                                }
                            </div>
                        }

                    }
                }


            </div>
            <hr />
            i++;
        }
    }
    else if (Model.Stages != null && Model.Stages.Count() > 0)
    {
        foreach (var stage in Model.Stages)
        {
            <div class="@GetStageClass(stage.IsHeaderVisible)">
                @if (stage.IsHeaderVisible)
                {
                    <div class="stageHeader" style="width: 100%;">
                        <i class="tagIcon iconSolidPro" style="font-size: 20px">signature</i>
                        <span class="text" style="font-size: 20px">@stage.Name</span>
                    </div>

                    if (stage.Tags != null && stage.Tags.Count() > 0)
                    {
                        <div class="tagsList" style="margin: 5px;">

                            @foreach (var tag in stage.Tags)
                            {
                                var backgroundColor = GetTagBackgroundColor(tag.ColorCode);
                                <div class="tagItem" style="background-color: @backgroundColor;">
                                    @if (!tag.IconName.IsNullOrEmpty())
                                    {
                                        <i class="tagIcon @GetIconClass(tag.IconStyle)">@tag.IconName</i>
                                    }
                                    <span class="text">@tag.Name</span>
                                </div>
                            }
                        </div>
                    }
                }
                @if (stage.Tasks != null && stage.Tasks.Count() > 0)
                {

                    foreach (var task in stage.Tasks)
                    {
                        <div style="padding: 10px">
                            @{
                                var imageUrl = @ImageHelpers.GetFullImageUrlFromName(task.Picture);
                                GetIconAndColor(task.Status, out var icon, out var colorClass);
                            }
                            <h3>@(i + 1) @task.Name</h3>

                            <div style="display: flex; align-items: center;">
                                <div style="flex-grow: 1; display: flex; align-items: center;">
                                    <img alt="placeholder" src="@imageUrl" style="width: 130px; height: 90px; margin-right: 10px;" />
                                    <div style="justify-content: center; display: flex; flex-direction: column;">
                                        @if (task.Signature != null)
                                        {
                                            <p style="font-size: 12px">
                                                <strong>Marked on</strong> @(task.LocalSignedAt.ToString(PdfConstants.GetDateTimeFormat(), null)) by @(task.Signature.SignedBy)
                                            </p>
                                        }

                                        @if (task.Tags != null && task.Tags.Any())
                                        {
                                            <div class="tagsList" style="margin-top: 5px;">
                                                @foreach (var tag in task.Tags)
                                                {
                                                    var backgroundColor = GetTagBackgroundColor(tag.ColorCode);
                                                    <div class="tagItem" style="background-color: @backgroundColor;">
                                                        @if (!tag.IconName.IsNullOrEmpty())
                                                        {
                                                            <i class="tagIcon @GetIconClass(tag.IconStyle)">@tag.IconName</i>
                                                        }
                                                        <span class="text">@tag.Name</span>
                                                    </div>
                                                }
                                            </div>

