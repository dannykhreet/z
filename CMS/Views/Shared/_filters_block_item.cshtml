@model EZGO.Api.Models.Area

@{
    <li class="treeview-animated-items">
        @if (Model.Children != null && Model.Children.Count > 0)
        {
            <a class="treeview-animated-items-header" data-areaid="@Model.Id" data-level="@Model.Level">
                <span>@Model.Name</span>
                <i class="fas fa-plus-circle float-right d-none"></i>
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-chevron-down fas fa-plus-circle float-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z" />
                </svg>
            </a>

            <ul class="nested">

                @foreach (EZGO.Api.Models.Area children in Model.Children)
                {
                    <partial name="_filters_block_item" model="children" />
                }
            </ul>

        }
        else
        {
            <a class="treeview-animated-items-header" data-areaid="@Model.Id" data-level="@Model.Level">@Model.Name</a>
        }
    </li>

}
