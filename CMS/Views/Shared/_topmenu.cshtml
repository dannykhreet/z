@model BaseViewModel
@{
    string logoMargin = "";
}

<script>
    var isRtl = false;
    const arabicLanguageRegExTopMenu = /language=['"]*ar[a-zA-Z-azA-Z]*['"]*/i;
    const arabicLanguageFoundTopMenu = document.cookie.match(arabicLanguageRegExTopMenu);
    if (arabicLanguageFoundTopMenu != null) {
        isRtl = true;
    }
</script>

<style>
    .inbox-count {
        background: #7f7f7f;
        border-radius: 50%;
        color: white;
        width: 20px;
        height: 20px;
        font-size: 13px;
        text-align: center;
        position: relative;
        top: -28px;
        left: 11px;
    }

    a.nav-link:hover .inbox-count {
        background: #4c4c4c;
    }

    #announcement_popup_container {
        background-color: #FFFFFF;
        width: 380px;
        max-width: 380px;
        position: absolute;
        left: 0px;
        top: 20px;
        padding: 15px;
        border-radius: 15px;
        box-shadow: 0 0 15px 5px rgba(0, 0, 0, .15);
        overflow: auto;
        max-height: 85vh;
        display: none;
        cursor:pointer;
        border: 3px solid #FFFFFF;
    }

    .announcement-popup-content {
        height: 95%;
    } 

    .announcement {
        max-width: 345px;
        margin-top:5px;
        margin-bottom:5px;
        border-bottom:1px solid #C0C0C0;
    }

    .announcement-title {
        font-size: 16px;
        font-weight: bolder;
    }

    .announcement-description {
        font-size: 14px;  
        margin-top:5px;
    }

    .announcement-image {
        height:340px;
        width: 340px;
        border-radius: 5px;

    }

    .announcement-date {
        font-size: 14px;
        text-transform: uppercase;
    }
</style>

<div class="" id="connectivity_issue_container" style="position:absolute;align-content:center;width:100%;text-align:center;height:30px;z-index:99999;background-color:#ffc107;opacity: 0.5;display:none;">
    <span style="opacity:1; color: #000000"><i class="fa-solid fa-triangle-exclamation" style="color:#FF0000;"></i> @(Model?.CmsLanguage?.GetValue(LanguageKeys.Info.PossibleConnectionIssue, "Possible connection issue") ?? "Possible connection issue") <i class="fa-solid fa-triangle-exclamation" style="color:#FF0000;"></i></span>
</div>
<nav class="main-header navbar navbar-expand navbar-white navbar-light border-bottom-0 primary-bg-color">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button" id="pushmenu"><i class="fas fa-bars"></i></a>
        </li>

        <li class="nav-item d-none d-sm-inline-block">
            <a asp-controller="dashboard" asp-action="index" class="nav-link">@(Model?.CmsLanguage?.GetValue(LanguageKeys.FrameWork.TopMenuDashboardTitle, "Dashboard") ?? "Dashboard")</a>
        </li>

        @if (Model?.ApplicationSettings?.Features?.SkillAssessmentsRunningInCms == true)
        {
            <li class="nav-item d-none d-sm-inline-block">
                <a asp-controller="assessment" asp-action="index" class="nav-link">@(Model?.CmsLanguage?.GetValue(LanguageKeys.Skills.StatsAssessmentsTitle, "Assessments") ?? "Assessments")</a>
            </li>
        }
        <li class="nav-item d-sm-inline-block">
            <partial name="_logout_form" model="Model"  />
        </li>



        @if (Model?.NewComments > 0)
        {
            <!-- Notifications Dropdown Menu -->
            <li class="nav-item dropdown">
                <a class="nav-link" data-bs-toggle="dropdown" href="/action">
                    <i class="far fa-bell"></i>
                    <span class="badge badge-warning navbar-badge">@Model.NewComments</span>
                </a>
                <div class="dropdown-menu dropdown-menu-lg">
                    <a href="/action?filter=unviewed" class="dropdown-item" style="display: flex; align-items: center; gap: 0.5rem; white-space: normal;">
                        <i class="fas fa-comments" style="flex-shrink: 0;"></i>
                        <span style="flex: 1; min-width: 0;">@(Model?.CmsLanguage.GetValue(LanguageKeys.Shared.NewComments, "new comments for") ?? "new comments for")</span>
                        <span class="text-muted text-sm" style="flex-shrink: 0; white-space: nowrap;">@(Model.NewComments) @(Model?.CmsLanguage.GetValue(LanguageKeys.Shared.Actions, "Actions") ?? "Actions")</span>
                    </a>
                </div>
            </li>
        }

        @if (Model?.ApplicationSettings?.Features?.TemplateSharingEnabled == true)
        {
            <li class="nav-item d-sm-inline-block">
                <a asp-controller="inbox" asp-action="index" class="nav-link">
                    @if (Model.NewInboxItemsCount > 0)
                    {
                        <i class="fa-regular fa-envelope text-md" style="color:red;"></i>
                        <div class="inbox-count">@Model.NewInboxItemsCount</div>
                    }
                    else
                    {
                        <i class="fa-regular fa-envelope-open text-md"></i>
                    }
                </a>
            </li>
        }

        @if (Model?.IsAdminCompany == true)
        {
            <li class="nav-item d-sm-inline-block">
                <a class="nav-link" href="javascript:void(0)" id="btn_announcements"><i class="fa-solid fa-bullhorn text-md"></i></a>
                <div style="position:relative;height:0px;">
                    <div id="announcement_popup_container" >
                        <div class="announcement-popup-content" id="annoucement_popup_content">
                        </div>
                    </div>
                </div>
            </li>
        }
       
    </ul>

    @if (Model?.EnableSearchFilters == true)
    {
        <div style="align-content:center;width:100%;text-align:center;margin-left:20px;margin-right:20px;">
            <div class="input-group input-group-sm">
                <input type="text" id="full_search_value" name="full_search_value" class="form-control form-control-sm" /> <div class="input-group-append"><button class="btn btn-default"><i class="fa fa-search"></i></button></div>
            </div>
        </div>
    }

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto" id="menu-logo">
        <!-- Messages Dropdown Menu -->
        <li>
            <img src="/images/ezfactory_logo.png" alt="EZ Factory Logo" class="brand-image1" style="opacity: .8;width:101px;margin-right:16px;margin-top:3px;">
        </li>
    </ul>


</nav>
<script>
    if (isRtl) {
        document.getElementById("menu-logo").style = "margin-left: 0px!important";
    } else {
        document.getElementById("menu-logo").style = "margin-left: auto!important";
    }
</script>