@{
}
<div class="container">
    <h1>@(Model?.CmsLanguage.GetValue(LanguageKeys.Home.SettingsText, "Settings") ?? "Settings")</h1>
    <h5>@(Model?.CmsLanguage.GetValue(LanguageKeys.Home.SetupYourEnviromentText, "Setup your environment") ?? "Setup your environment")</h5>
</div>
<section class="container">
    <div class="row">
        <div class="col-md-6 mb-2">
            <div class="form-check"><input class="form-check-input" type="checkbox" id="chk-activity"><label class="form-check-label" for="chk-activity">@(Model?.CmsLanguage.GetValue(LanguageKeys.Home.ShowActivityOnDashboard, "Show activity on the dashboard buttons") ?? "Show activity on the dashboard buttons")</label></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mb-2">
            <div class="form-check"><input class="form-check-input" type="checkbox" id="chk-headerimg"><label class="form-check-label" for="chk-headerimg">@(Model?.CmsLanguage.GetValue(LanguageKeys.Home.ShowImagesOnDashboard, "Show images on the dashboard buttons") ?? "Show images on the dashboard buttons")</label></div>
        </div>
    </div>
</section>