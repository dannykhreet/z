@model List<EZGO.Api.Models.Area>
@using EZGO.Api.Models;
@{
    Layout = null;
}

@if (Model != null)
{
    <ul class="list-group col-3">
        @foreach (Area item in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center" onclick='getAreas(this)' data-id="@item.Id" data-level="@item.Level">
                @item.Name
                @if (item.Children.Count > 0)
                {
                    <span class="badge badge-primary badge-pill pt-1">@item.Children.Count</span>
                }
            </li>
        }
    </ul>
}


