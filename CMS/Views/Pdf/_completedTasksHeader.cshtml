@model CompletedTasksPdfHeaderModel
@using WebApp.Models.Pdf;
@{
    Layout = null;

    var tz = User.FindFirst(System.Security.Claims.ClaimTypes.Country)?.Value ?? "Europe/Amsterdam";
    TimeZoneInfo timezone = TZConvert.EzFindTimeZoneInfoById(tz);
}
<!doctype html>
<html lang="en">
<head>
    <style>

        #header {
            font-family: 'Cascadia Mono','Courier New',-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol";
            font-size: 18px;
            white-space: nowrap;
            margin: 0px;
            padding: 0px;
            width: 100%;
            height: 2.75rem;
            color: white;
            background-color: #e17101;
            border-spacing: 0 0;
            border-collapse: collapse;
            vertical-align: bottom;
        }
    </style>
</head>
<body>
    <table id="header" style="width: 100%; top: 0px; left: 0px; right: 0px">
        <tr style="width: 100%; top: 0; height: auto">
            <td colspan="2" style="text-align: left; padding-left: 2.5rem; padding-top: 1rem; font-size: 28px">
                <strong>@Model.HeaderText</strong>
            </td>
        </tr>
        <tr style="width: 100%; top: 0; height: auto">
            <td style="text-align: left; padding-left: 2.5rem; padding-bottom: 1rem; font-size: 20px">
                From @Model.From.ToLongDateString() @Model.From.ToShortTimeString() to @Model.To.ToLongDateString() @Model.To.ToShortTimeString()
            </td>
        </tr>
    </table>
</body>
</html>
