@model List<WebApp.Models.Statistics.LogAuditingModel>
@using WebApp.Models.Statistics
@{    
    Layout = null;
    var Tappings = Model.Where(item => item.CreatedOnUTC.Date.DayOfYear == DateTime.Now.Date.DayOfYear).ToList();
    var SignedChecklists = Model.Where(item => item.Description.Equals("Signed checklist.") && item.CreatedOnUTC.Date.DayOfYear == DateTime.Now.Date.DayOfYear).ToList();
    var AddedChecklists = Model.Where(item => item.Description.Equals("Added checklist.") && item.CreatedOnUTC.Date.DayOfYear == DateTime.Now.Date.DayOfYear).ToList();
}

@if(Model != null)
{
    <ul class="list-unstyled d-none">
        <li class="media">
            <div class="my-circle"><i class="fas fa-hand-point-up"></i></div>
            <div class="media-body pl-3">
                <h5 class="mt-0 mb-1">Today's tappings</h5>
                There are @Tappings.Count tasks tapped today.
            </div>
        </li>
        <li class="media my-4">
            <div class="my-circle" style="background-color:#f0ad4e;"><i class="fas fa-hand-point-up"></i></div>
            <div class="media-body pl-3">
                <h5 class="mt-0 mb-1">Today's signed checklists</h5>
                There are @SignedChecklists.Count checklists completed and signed today.
            </div>
        </li>
        <li class="media">
            <div class="my-circle" style="background-color:#999999;"><i class="fas fa-hand-point-up"></i></div>
            <div class="media-body pl-3">
                <h5 class="mt-0 mb-1">Today's added checklists</h5>
                There are @AddedChecklists.Count checklists added today.
            </div>
        </li>
    </ul>
}