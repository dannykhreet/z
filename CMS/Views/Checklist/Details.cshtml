                        <div class="col-12 p-0 pb-3">
                            <div class="card">
                                <div class="card-header h5">
                                    <div class="row">
                                        <div class="col-sm-6">@(Model?.CmsLanguage.GetValue(LanguageKeys.Checklist.OpenFields, "Open fields") ?? "Open fields")</div>
