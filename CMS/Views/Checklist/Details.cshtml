                                                    <label class="btn btn-light text-muted" style="flex:1;">
                                                        <input type="radio" name="signature" id="signature2" value="single" onclick="ezgolist.setDetails(this)"> @(Model?.CmsLanguage?.GetValue(LanguageKeys.Checklist.OptionOneSignature, "One signature") ?? "One signature")
                                                    </label>

                                                    <label class="btn btn-light text-muted" style="flex:1;">
                                                        <input type="radio" name="signature" id="signature3" value="double" onclick="ezgolist.setDetails(this)"> @(Model?.CmsLanguage?.GetValue(LanguageKeys.Checklist.OptionTwoSignature, "Two signatures") ?? "Two signatures")
