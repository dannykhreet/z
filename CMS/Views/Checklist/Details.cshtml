                                                    <label class="btn btn-light text-muted" style="flex:1;">
                                                        <input type="radio" name="role" id="role2" value="shift_leader" onclick="ezgolist.setDetails(this)"> @(Model?.CmsLanguage?.GetValue(LanguageKeys.Checklist.OptionShiftLeader, "Shift leader") ?? "Shift leader")
