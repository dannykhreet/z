@model WebApp.Models.Task.TaskTemplateModel
@using WebApp.Models.User
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var picture = WebApp.Helpers.MediaHelpers.GetMediaImageUrl(Model.ApplicationSettings, Model.Picture);
    if (string.IsNullOrEmpty(Model.Picture))
    {
        picture = @"/assets/img/normal_unavailable_image.png";
    }
}

<div class="container">
    <div class="row">
        <div class="col" style="margin-top:12px;">
            <h1>Task Profile</h1>
            <p>Manage this task</p>
        </div>

        <div class="col">
            <div style="text-align: right;">
                <img src="@picture" width="200" height="150"  />
            </div>
        </div>
    </div>

    <form>
        <div class="row">
            <br />
            <div class="col-md-12">
                <label for="txtFirstname">Name</label>
                @Html.TextBoxFor(m => m.Name, null, new { @class = "form-control", placeholder = "Name", @type = "text" })
            </div>

            <div class="col-md-5">
                <label for="inputState">Role</label>
                <select id="inputState" class="form-control">
                    <option selected>Choose...</option>
                    <option>Basic user</option>
                    <option>Shift leader</option>
                    <option>Manager</option>
                </select>
            </div>

            <div class="col">
                <label for="txtLastname">Area Path</label>
                @Html.TextBoxFor(m => m.AreaPath, null, new { @class = "form-control", placeholder = "Area Path", @type = "text" })
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
    </script>
}