@model WebApp.ViewModels.WorkInstructionsViewModel
@{
    Layout = null;
}

<div class="modal-header">
    <h4 class="modal-title">@(Model?.CmsLanguage?.GetValue(LanguageKeys.WorkInsctruction.ItemTitle, "Work instruction item") ?? "Work instruction item") (0/0)</h4><button type="button" class="close" data-bs-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
</div>

<div class="modal-body">
    <div id="fileSizeAlert-instruction" class="alert alert-danger d-none">
        @(Model?.CmsLanguage?.GetValue(LanguageKeys.FrameWork.FileSizeTooBig, "File size for this media file is too big!") ?? "File size for this media file is too big!")
        <button type="button" class="close" onclick="$(this).closest('div.alert').hide()" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <div class="row">
        <div id="itemDropZone" style="height: 253px" data-drop="true" class="col-auto col-sm-12 col-md-12 col-lg-4 pb-2">
            <div style="width: 100%;height:245px;display:flex;left:0;right:0">
                <a href="" data-fancybox="steps" data-caption="" class="d-flex" style="width: 100%;margin-bottom: 8px">
                    <img id="dialogImg" class="img-fluid main-img" style="width:100%;object-fit: cover; object-position: center; border-radius: 5px;" />
                </a>

                <div class="controls" style="position:absolute;bottom:0px;">
                    <input class="d-none" type="file" id="uploaderItem" accept="image/*,video/*" name="photo" onchange="ezgolist.previewFileEx(this);" onclick="this.value=null" data-preview="#dialogImg" data-templateid="0" data-type="item" required>
                    <a href="#" onclick="$('#uploaderItem').trigger('click'); return false;">
                        <div class="border rounded-circle float-right d-lg-flex justify-content-lg-center shadow main-image-pencil">
                            <i class="fa fa-paperclip d-lg-flex justify-content-center align-items-center align-content-center" style="font-size: 20px;"></i>
                        </div>
                    </a>

                    <a href="#" data-selector="deletemedia" data-type="item">
                        <div class="border rounded-circle float-left d-lg-flex justify-content-lg-center shadow main-image-pencil">
                            <i class="fa fa-trash d-lg-flex justify-content-center align-items-center align-content-center" style="font-size: 20px;"></i>
                        </div>
                    </a>

                    <video id="dialogVideo" controls style="display:none;"></video>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-12 col-md-12 col-lg-8">
            <div class="form-group w-100">
                <textarea id="txtItemName" maxlength="240" class="form-control-sm form-control" placeholder="@(Model?.CmsLanguage?.GetValue(LanguageKeys.WorkInsctruction.EnterTitlePlaceholder, "Enter a title for the work instruction step...") ?? "Enter a title for the work instruction step...")"></textarea>
            </div>

            <div class="form-group w-100" style="margin-bottom: 10px">
                <textarea id="txtItemDesc" class="form-control-sm form-control" rows="8" placeholder="@(Model?.CmsLanguage?.GetValue(LanguageKeys.WorkInsctruction.EnterDescriptionPlaceholder, "Enter a description for the work instruction step...") ?? "Enter a description for the work instruction step...")"></textarea>
            </div>

            <div class="form-inline w-100 d-none">
                <div class="form-group mb-2">
                    <label class="mr-3 text-muted" style="font-weight:normal;">@(Model?.CmsLanguage?.GetValue(LanguageKeys.WorkInsctruction.QuestionWeightTitle, "Question weight") ?? "Question weight")</label>
                    <input type="number" id="txtWeight" class="form-control form-control-sm" min="1" value="1.00" />
                </div>
            </div>

            <div class="col-md-12 p-0 d-none">
                <ul id="valueProps"></ul>
                <partial name="~/Views/Shared/_value_properties.cshtml" />
            </div>
        </div>
    </div>

    @if (Model?.ApplicationSettings?.Features?.WorkInstructionItemAttachmentPdf == true || Model?.ApplicationSettings?.Features?.WorkInstructionItemAttachmentLink == true)
    {
        <ul id="workInstructionItemAttachmentsSelectionContainer" class="list-inline card-group pt3 itemlist ui-sortable">
            <li class="list-inline-item pb-3 d-print-none">
                <div class="card h-100 shadow-sm">
                    @if (Model?.ApplicationSettings?.Features?.WorkInstructionItemAttachmentPdf == true)
                    {
                        <div>
                            <a href="#" onclick="ezgoWorkInstruction.addPdfAttachmentToItem()">
                                <div class="addclip">
                                    <i class="fa fa-plus-circle fa-2x"></i>
                                    <div>
                                        @(Model?.CmsLanguage?.GetValue(LanguageKeys.WorkInsctruction.ItemAddPdf, "Add pdf") ?? "Add pdf")
                                    </div>
                                </div>
                            </a>
                        </div>
                    }

                    @if (Model?.ApplicationSettings?.Features?.WorkInstructionItemAttachmentLink == true)
                    {
                        <div>
                            <div class="addclip" onclick="ezgoWorkInstruction.showAddLinkModal()">
                                <i class="fa fa-plus-circle fa-2x"></i>
                                <div>
                                    @(Model?.CmsLanguage?.GetValue(LanguageKeys.WorkInsctruction.ItemAddLink, "Add link") ?? "Add link")
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </li>
        </ul>
        <ul id="workInstructionItemAttachmentsPreviewContainer" style="padding-left: 0px; margin-top: 1rem"></ul>
    }

    <div class="row d-none">
        <div class="col-12 pt-2">
            <h5>@(Model?.CmsLanguage?.GetValue(LanguageKeys.WorkInsctruction.InstructionDialogTitle, "Instructions") ?? "Instructions")</h5>
        </div>

        <div class="col-12 p-2">
            <ul id="instructionlist" class="list-inline card-group pt3 itemlist"></ul>
        </div>
    </div>
</div>

<div data-id="itemdialogfooter" class="modal-footer" data-templateid="0">
    <input type="hidden" id="currentTemplateItemId" />
    <input type="file" style="display:none" accept=".pdf" id="workInstructionItemAttachmentPdf" />
    <button id="btnDeleteItem" class="btn btn-danger btn-sm mr-auto" data-templateid="0" type="button" onclick="ezgolist.deleteItem()">@(Model?.CmsLanguage?.GetValue(LanguageKeys.WorkInsctruction.DialogDelete, "Delete") ?? "Delete")</button>
    <button id="btnPreviousTemplate" class="btn btn-light" type="button" onclick="ezgolist.previousTemplate()">@(Model?.CmsLanguage?.GetValue(LanguageKeys.WorkInsctruction.DialogPrevItem, "previous item") ?? "previous item")</button>
    <button class="btn btn-ezgo btn-sm" type="button" data-bs-dismiss="modal">@(Model?.CmsLanguage?.GetValue(LanguageKeys.WorkInsctruction.DialogClose, "Close") ?? "Close")</button>
    <button id="btnNextTemplate" class="btn btn-light" type="button" onclick="ezgolist.nextTemplate()">@(Model?.CmsLanguage?.GetValue(LanguageKeys.WorkInsctruction.DialogNextItem, "next item") ?? "next item")</button>
</div>