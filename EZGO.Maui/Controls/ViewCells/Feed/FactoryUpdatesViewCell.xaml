<?xml version="1.0" encoding="utf-8" ?>
<ViewCell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EZGO.Maui.Controls.ViewCells.Feed.FactoryUpdatesViewCell">
    <ViewCell.View>
        <Grid Padding="2" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.75*"/>
                <RowDefinition Height="0.25*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.9*"/>
                <ColumnDefinition Width="0.1*"/>
            </Grid.ColumnDefinitions>
            <!--Title and date--> 
            <Label Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Text="{Binding Title}" FontSize="17" MaxLines="2" LineBreakMode="TailTruncation" Margin="0,2,0,0"/>
            <Label Grid.Row="1" Text="{Binding ItemLocalDate, Converter={StaticResource DateToDayFirstStringConverter}}" FontSize="11" />
            <!--Sticky icon--> 
            <Label
                IsVisible="{Binding IsSticky}"
                Grid.Row="0"
                Grid.Column="1"
                Grid.RowSpan="2"
                VerticalOptions="Center"
                Text="&#xf08d;" FontFamily="FAS" FontSize="20"/>
        </Grid>
    </ViewCell.View>
</ViewCell>

