<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="EZGO.Maui.Controls.DateTimePicker.CustomDatePicker"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:datetimepicker="clr-namespace:EZGO.Maui.Controls.DateTimePicker">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.7*"/>
        </Grid.ColumnDefinitions>
        <Label
            x:Name="label"
            Grid.Row="0"
            Grid.Column="0"
            FontFamily="{StaticResource RobotoRegular}"
            FontSize="Small"
            TextColor="{StaticResource DarkGreyColor}"
            VerticalOptions="Center" />
        <StackLayout
            Grid.Row="0"
            Grid.Column="1"
            HorizontalOptions="Fill"
            VerticalOptions="Center">

            <Entry
                x:Name="entry"
                FontFamily="{StaticResource RobotoRegular}"
                InputTransparent="True"
                IsReadOnly="True"
                TextColor="{StaticResource DarkGreyColor}" />
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
            </StackLayout.GestureRecognizers>
        </StackLayout>

        <datetimepicker:TranslatedDatePicker
            x:Name="picker"
            DateSelected="Picker_DateSelected"
            IsVisible="False" />
    </Grid>
</ContentView>

