<?xml version="1.0" encoding="utf-8" ?>
<Grid 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="EZGO.Maui.Controls.NotificationBar"
    xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
    x:Name="NotificationBarPage"
    xmlns:classes="clr-namespace:EZGO.Maui.Classes"
    Grid.Row="0"
    Grid.Column="1"
    IsVisible="{Binding HasUnreadMessages, Source={x:Reference NotificationBarPage}}"
    BackgroundColor="{StaticResource WhiteColor}"
    HeightRequest="45">
    <StackLayout Orientation="Horizontal">
        <Label
            x:Name="NotificationLabel"
            Margin="30,0,0,0"
            Text="{classes:Translate CHANGES_IN_WI}"
            VerticalTextAlignment="Center" HorizontalOptions="StartAndExpand" />
        <buttons:SfButton
            Stroke="{StaticResource GreenColor}"
            StrokeThickness="1"
            x:Name="NotificationButton"
            Margin="0,5,40,5"
            Text="{classes:Translate SHOW_CHANGES}"
            TextColor="{StaticResource GreenColor}"
            Command="{Binding NotificationButtonCommand, Source={x:Reference NotificationBarPage}}"
            HorizontalOptions="EndAndExpand" CornerRadius="5" WidthRequest="150" Background="White" />
    </StackLayout>
</Grid>
