<?xml version="1.0" encoding="utf-8" ?>
<Grid
    x:Class="EZGO.Maui.Controls.Buttons.SubmitMauiButton"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="submitButton"
    BackgroundColor="{StaticResource GreenColor}"
    HeightRequest="45"
    VerticalOptions="CenterAndExpand">
    <ActivityIndicator
        x:Name="indicator"
        HorizontalOptions="Center"
        Opacity="0.8"
        Scale="1"
        VerticalOptions="Center"
        Color="White" />
    <Label
        x:Name="buttonContent"
        HorizontalTextAlignment="Center"
        Text="{Binding ButtonText, Source={x:Reference submitButton}}"
        TextColor="White"
        TextTransform="Uppercase"
        VerticalTextAlignment="Center" />
    <Grid.GestureRecognizers>
        <TapGestureRecognizer Command="{Binding Clicked, Source={x:Reference submitButton}}" Tapped="TapGestureRecognizer_Tapped" />
    </Grid.GestureRecognizers>
</Grid>
