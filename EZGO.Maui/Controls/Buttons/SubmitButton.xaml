<?xml version="1.0" encoding="UTF-8" ?>
<buttons:SfButton
    x:Class="EZGO.Maui.Controls.Buttons.SubmitButton"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:busyindicator="http://schemas.syncfusion.com/maui"
    xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
    x:Name="submitButton"
    Background="{StaticResource GreenColor}"
    Stroke="{StaticResource GreenColor}"
    CornerRadius="5"
    HeightRequest="45"
    VerticalOptions="CenterAndExpand">
    <buttons:SfButton.Content>
        <DataTemplate>
            <Grid>
                <!--<busyindicator:SfBusyIndicator
                    x:Name="indicator"
                    AnimationType="Cupertino"
                    IndicatorColor="White"
                    SizeFactor="0.3" />-->
                <Label
                    x:Name="buttonContent"
                    HorizontalTextAlignment="Center"
                    Text="{Binding ButtonText, Source={x:Reference submitButton}}"
                    TextColor="White"
                    TextTransform="Uppercase"
                    VerticalTextAlignment="Center" />
            </Grid>
        </DataTemplate>
    </buttons:SfButton.Content>

</buttons:SfButton>
