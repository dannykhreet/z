<?xml version="1.0" encoding="utf-8" ?>
<Button
    x:Class="EZGO.Maui.Controls.Buttons.BackButton"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:classes="clr-namespace:EZGO.Maui.Classes;assembly=EZGO.Maui"
    x:Name="backButton"
    Text="{x:Static classes:IconFont.ChevronLeft}"
    FontSize="42"
    HeightRequest="60"
    WidthRequest="50"
    BackgroundColor="Transparent"
    TextColor="{StaticResource DarkGreyColor}"
    FontFamily="{StaticResource MaterialFontFamily}"
    VerticalOptions="CenterAndExpand">
    <Button.Margin>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS">0,0,10,0</On>
            <On Platform="Android,Windows">0,0,0,0</On>
        </OnPlatform>
    </Button.Margin>
</Button>
