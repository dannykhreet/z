<?xml version="1.0" encoding="utf-8" ?>
<HorizontalStackLayout
    x:Class="EZGO.Maui.Controls.Buttons.CompletedButton"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:classes="clr-namespace:EZGO.Maui.Classes;assembly=EZGO.Maui"
    x:Name="completedButton"
    HorizontalOptions="EndAndExpand"
    VerticalOptions="CenterAndExpand">
    <Label
        FontFamily="{StaticResource MaterialFontFamily}"
        HorizontalOptions="EndAndExpand"
        FontSize="32"
        TextColor="{StaticResource GreenColor}"
        Text="{x:Static classes:IconFont.Update}"
        VerticalOptions="CenterAndExpand" />

    <Button
        Command="{Binding Command, Source={x:Reference completedButton}}"
        FontFamily="{StaticResource RobotoLight}"
        HorizontalOptions="EndAndExpand"
        FontSize="Small"
        TextColor="{StaticResource GreenColor}"
        BackgroundColor="Transparent"
        Margin="5,0,0,0"
        Text="{Binding Text, Source={x:Reference completedButton}}"
        VerticalOptions="CenterAndExpand" />
</HorizontalStackLayout>
