<?xml version="1.0" encoding="utf-8" ?>
<button:SfButton
    x:Class="EZGO.Maui.Controls.Buttons.ThumbDownButton"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:button="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
    xmlns:classes="clr-namespace:EZGO.Maui.Classes"
    xmlns:enumerations="clr-namespace:EZGO.Api.Models.Enumerations;assembly=EZGO.Api.Models"
    x:Name="thumbDownButton"
    Background="Transparent"
    Stroke="{Binding ButtonColor, Source={x:Reference thumbDownButton}}"
    StrokeThickness="4">
    <!--  Thumb Down Triggers  -->
    <button:SfButton.Triggers>
        <!--  Status Trigger  -->
        <DataTrigger
            Binding="{Binding Status, Source={x:Reference thumbDownButton}}"
            TargetType="button:SfButton"
            Value="{x:Static enumerations:TaskStatusEnum.NotOk}">

            <!--  BackgroundColor Setter  -->
            <Setter Property="Background" Value="{StaticResource RedColor}" />

            <!--  BorderColor Setter  -->
            <Setter Property="Stroke" Value="{StaticResource RedColor}" />
        </DataTrigger>
    </button:SfButton.Triggers>

    <button:SfButton.Content>
        <DataTemplate>
            <!--  Thumb Down Content  -->
            <Image
                HorizontalOptions="Center"
                IsOpaque="True"
                VerticalOptions="Center">

                <!--  Thumb Down Source  -->
                <Image.Source>
                    <FontImageSource
                        x:Name="imageSource"
                        FontFamily="{StaticResource MaterialFontFamily}"
                        Glyph="{x:Static classes:IconFont.ThumbDown}"
                        Size="24"
                        Color="{Binding IconColor, Source={x:Reference thumbDownButton}}" />
                </Image.Source>

                <!--  Thumb Down Triggers  -->
                <Image.Triggers>

                    <!--  Image Trigger  -->
                    <DataTrigger
                        Binding="{Binding Status, Source={x:Reference thumbDownButton}}"
                        TargetType="Image"
                        Value="{x:Static enumerations:TaskStatusEnum.NotOk}">

                        <!--  Source Setter  -->
                        <Setter Property="Source">
                            <FontImageSource
                                FontFamily="{StaticResource MaterialFontFamily}"
                                Glyph="{x:Static classes:IconFont.ThumbDown}"
                                Size="25"
                                Color="White" />
                        </Setter>
                    </DataTrigger>
                </Image.Triggers>
            </Image>
        </DataTemplate>
    </button:SfButton.Content>
    <VisualStateManager.VisualStateGroups>
        <VisualStateGroup x:Name="CommonStates">
            <VisualState x:Name="Disabled">
                <VisualState.Setters />
            </VisualState>
        </VisualStateGroup>
    </VisualStateManager.VisualStateGroups>
</button:SfButton>
