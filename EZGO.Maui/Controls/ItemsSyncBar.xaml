<?xml version="1.0" encoding="utf-8" ?>
<Grid 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
    xmlns:classes="clr-namespace:EZGO.Maui.Classes"
    xmlns:controls="clr-namespace:EZGO.Maui.Controls"
    x:Class="EZGO.Maui.Controls.ItemsSyncBar"
    x:Name="SyncBar"
    x:DataType="controls:ItemsSyncBar"
    Grid.Row="0"
    Grid.Column="1"
    IsVisible="False"
    BackgroundColor="{StaticResource GreenColor}"
    HeightRequest="45">
    <StackLayout Orientation="Horizontal">
        <Label
            x:Name="SyncLabel"
            Margin="30,0,0,0"
            Text="{classes:Translate CHECKLIST_SAVE_CHANGES}"
            TextColor="White" VerticalTextAlignment="Center" HorizontalOptions="StartAndExpand" />
        <buttons:SfButton
            IsVisible="{Binding IsSyncing, Source={x:Reference SyncBar}, Converter={StaticResource ReverseBooleanConverter}}"
            x:Name="SyncButton"
            Margin="0,5,20,5"
            Text="{classes:Translate ALERT_YES_BUTTON_TITLE}"
            TextColor="{StaticResource GreenColor}"
            Command="{Binding SyncButtonCommand, Source={x:Reference SyncBar}}"
            HorizontalOptions="EndAndExpand" CornerRadius="5" WidthRequest="100"/>
        <buttons:SfButton
            IsVisible="{Binding IsSyncing, Source={x:Reference SyncBar}}"
            x:Name="SyncButtonBlocked"
            Margin="0,5,20,5"
            Text="{classes:Translate SYNC_STATES_VIEW_SYNSING_MESSAGE}"
            TextColor="{StaticResource StageGreyColor}"             
            HorizontalOptions="EndAndExpand" CornerRadius="5" Background="{StaticResource LightGreyColor}" />
    </StackLayout>
</Grid>
