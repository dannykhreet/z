<?xml version="1.0" encoding="utf-8" ?>
<DataTemplate xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:button="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             x:Class="EZGO.Maui.Controls.DataTemplates.TagModelDataTemplate"
             x:DataType="tags:TagModel"
             xmlns:tags="clr-namespace:EZGO.Maui.Core.Models.Tags;assembly=EZGO.Maui.Core">
    <button:SfButton
        InputTransparent="True"
        Margin="20,20,20,0" HeightRequest="35" WidthRequest="150"
        CornerRadius="0"
        Background="{Binding ColorCode, Converter={StaticResource StringToColorConverter}}">
        <button:SfButton.Content>
            <DataTemplate>
        <StackLayout
            Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Image
                x:Name="Icon" Margin="5,0,0,0" IsOpaque="True"
                IsVisible="{Binding IconName, Converter={StaticResource StringIsNullOrEmptyConverter}, ConverterParameter=false}">
                <Image.Source>
                    <FontImageSource
                        x:Name="ImageIcon"
                        Glyph="{Binding IconName}"
                        FontFamily="FAR"
                        Size="13" Color="White" />
                </Image.Source>
                <Image.Triggers>
                    <DataTrigger
                        TargetType="Image"
                        Binding="{Binding IconStyle}"
                        Value="solid">
                        <Setter TargetName="ImageIcon" Property="FontImageSource.FontFamily" Value="FAS" />
                    </DataTrigger>
                </Image.Triggers>
            </Image>
            <Label
                Margin="-5,0,0,0" FontSize="12" FontAttributes="Bold" TextColor="White"
                Text="{Binding Name}"
                HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center" LineBreakMode="WordWrap" VerticalOptions="Center" />
            <Image Margin="0,0,5,0" IsOpaque="True">
                <Image.Source>
                    <FontImageSource
                        Glyph="xmark"
                        FontFamily="FAS"
                        Size="18" Color="White"/>
                </Image.Source>
            </Image>
        </StackLayout>
        </DataTemplate>
        </button:SfButton.Content>
    </button:SfButton>
</DataTemplate>
