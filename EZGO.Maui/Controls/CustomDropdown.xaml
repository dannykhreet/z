<?xml version="1.0" encoding="utf-8" ?>
<HorizontalStackLayout
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="EZGO.Maui.Controls.CustomDropdown"
    xmlns:classes="clr-namespace:EZGO.Maui.Classes"
    WidthRequest="400"
    x:Name="Dropdown">

    <HorizontalStackLayout.GestureRecognizers>
        <TapGestureRecognizer Command="{Binding Command, Source={x:Reference Dropdown}}"/>
    </HorizontalStackLayout.GestureRecognizers>

    <!--Filter Name-->
    <Label
        x:Name="FilterNameLabel"
        Text="{Binding Text, Source={x:Reference Dropdown}}"
        FontSize="Large"
        MaximumWidthRequest="375"
        FontFamily="{StaticResource RobotoLight}"
        VerticalOptions="CenterAndExpand"
        MaxLines="1"
        LineBreakMode="TailTruncation"></Label>

    <!--Expand Icon-->
    <Label
        Text="{x:Static classes:IconFont.ExpandMore}"
        FontFamily="{StaticResource MaterialFontFamily}"
        WidthRequest="25"
        FontSize="30"
        VerticalOptions="CenterAndExpand"
        IsVisible="{Binding IsExpandIconVisible, Source={x:Reference Dropdown}}"/>
</HorizontalStackLayout>

