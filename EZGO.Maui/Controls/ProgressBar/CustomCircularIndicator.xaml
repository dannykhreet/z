<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="EZGO.Maui.Controls.ProgressBar.CustomCircularIndicator"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:busyindicator="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
    x:Name="circularIndicator">
    <Grid>
        <!--  Background Overlay  -->
        <Grid BackgroundColor="{StaticResource DarkGreyColor}" Opacity="0.2" />

        <!--  Indicator  -->
        <busyindicator:SfBusyIndicator
            AnimationType="Cupertino"
            IndicatorColor="{StaticResource DarkGreyColor}"
            IsRunning="{Binding IsBusy, Source={x:Reference circularIndicator}}" />
    </Grid>
</ContentView>
