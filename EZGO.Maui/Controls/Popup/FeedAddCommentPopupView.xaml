<?xml version="1.0" encoding="UTF-8" ?>
<popup:SfPopup
    x:Class="EZGO.Maui.Controls.Popups.FeedAddCommentPopupView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:popup="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
    xmlns:content="clr-namespace:EZGO.Maui.Controls.Popups.Content"
    x:Name="Page"
    WidthRequest="800"
    ShowFooter="False"
    ShowHeader="False"
    Opened="Page_Opened"
    Closed="Page_Closed"
    HeightRequest="450">
    <!--  Header  -->
    <popup:SfPopup.HeaderTemplate>
        <DataTemplate>
            <Label Text="" />
        </DataTemplate>
    </popup:SfPopup.HeaderTemplate>

    <!--  Content  -->
    <popup:SfPopup.ContentTemplate>
        <DataTemplate>
            <content:FeedAddCommentPopupContent NewItem="{Binding NewPost, Source={x:Reference Page}}" SubmitButtonCommand="{Binding SubmitButtonCommand, Source={x:Reference Page}}" />
        </DataTemplate>
    </popup:SfPopup.ContentTemplate>
</popup:SfPopup>
