<?xml version="1.0" encoding="utf-8" ?>
<popup:SfPopup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:popup="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             xmlns:classes="clr-namespace:EZGO.Maui.Classes;assembly=EZGO.Maui"
             x:Class="EZGO.Maui.Controls.Popup.DeleteIncompleteChecklistPopupView"
             ShowFooter="True"
             ShowHeader="False"
             x:Name="DeletePopup">
    <!--  Content  -->
    <popup:SfPopup.ContentTemplate>
        <DataTemplate>
            <StackLayout>
                <Label
                    Padding="20,20,0,0"
                    FontFamily="{StaticResource RobotoRegular}"
                    FontSize="Medium"
                    HorizontalOptions="Start"
                    HorizontalTextAlignment="Start"
                    Text="{classes:Translate DELETE_STAGE_CONFIRMATION}"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Start" />
                <Label
                    Padding="20,0,0,0"
                    FontFamily="{StaticResource RobotoRegular}"
                    FontSize="Small"
                    HorizontalOptions="Start"
                    HorizontalTextAlignment="Start"
                    Text="{classes:Translate CANNOT_UNDO}"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Start" />
            </StackLayout>

        </DataTemplate>
    </popup:SfPopup.ContentTemplate>


    <!--  Footer  -->
    <popup:SfPopup.FooterTemplate>
        <DataTemplate>
            <Grid Padding="20,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="5*" />
                </Grid.ColumnDefinitions>

                <!--  Cancel button  -->
                <buttons:SfButton
                    Grid.Column="1"
                    Background="{StaticResource DarkerGreyColor}"
                    Command="{Binding CancelButtonCommand, Source={x:Reference DeletePopup}}"
                    CornerRadius="3"
                    Text="{classes:Translate BASE_TEXT_CANCEL}"
                    TextColor="Black" />

                <!--  Keep button  -->
                <buttons:SfButton
                    Grid.Column="2"
                    Background="{StaticResource RedColor}"
                    Command="{Binding DeleteButtonCommand, Source={x:Reference DeletePopup}}"
                    CornerRadius="3"
                    Text="{classes:Translate DELETE_BASE_TEXT}" />
            </Grid>
        </DataTemplate>
    </popup:SfPopup.FooterTemplate>
</popup:SfPopup>
