<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:EZGO.Maui.Controls"
             x:Class="EZGO.Maui.Views.PdfViewerControl"
             x:Name="PDFViewer">
    <controls:CustomPdfViewer
        x:Name="viewer"
        SwipeLeftCommand="{Binding SwipeLeftCommand, Source={x:Reference PDFViewer}}"
        SwipeRightCommand="{Binding SwipeRightCommand, Source={x:Reference PDFViewer}}"/>
    <ContentView.GestureRecognizers>
        <SwipeGestureRecognizer Direction="Left" Command="{Binding SwipeLeftCommand, Source={x:Reference PDFViewer}}" />
        <SwipeGestureRecognizer Direction="Right" Command="{Binding SwipeRightCommand, Source={x:Reference PDFViewer}}" />
    </ContentView.GestureRecognizers>
</ContentView>

