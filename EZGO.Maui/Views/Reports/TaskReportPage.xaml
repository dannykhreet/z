<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="EZGO.Maui.Views.TaskReportPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="clr-namespace:EZGO.Maui.Behaviors;assembly=EZGO.Maui"
    xmlns:busyindicator="http://schemas.syncfusion.com/maui"
    xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
    xmlns:classes="clr-namespace:EZGO.Maui.Classes;assembly=EZGO.Maui"
    xmlns:combobox="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
    xmlns:controls="clr-namespace:EZGO.Maui.Controls;assembly=EZGO.Maui"
    xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
    xmlns:listview="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
    xmlns:partial="clr-namespace:EZGO.Maui.Views.Partial"
    xmlns:syncfusion="clr-namespace:Syncfusion.Maui.PullToRefresh;assembly=Syncfusion.Maui.PullToRefresh"
    xmlns:treeview="clr-namespace:Syncfusion.Maui.TreeView;assembly=Syncfusion.Maui.TreeView"
    x:Name="Page"
    Title="Tasks report"
    ios:Page.UseSafeArea="true"
    NavigationPage.HasBackButton="True"
    NavigationPage.HasNavigationBar="false">

    <ContentPage.Content>

        <AbsoluteLayout AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="WidthProportional,HeightProportional">

            <Grid
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                AbsoluteLayout.LayoutFlags="WidthProportional,HeightProportional"
                ColumnSpacing="0"
                RowSpacing="0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="0.127*" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--  header  -->
                <Grid
                    ColumnSpacing="0"
                    RowSpacing="0"
                    StyleClass="header, bg-white, m-0, pr-15">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="200" />
                    </Grid.ColumnDefinitions>

                    <StackLayout
                        Grid.Column="0"
                        StyleClass="column0"
                        VerticalOptions="CenterAndExpand">
                        <Button
                            Command="{Binding BindingContext.CancelCommand, Source={x:Reference Page}}"
                            FontFamily="{StaticResource MaterialFontFamily}"
                            StyleClass="fontButton, fs-42, fc-darkgrey"
                            Text="{x:Static classes:IconFont.ChevronLeft}"
                            VerticalOptions="CenterAndExpand" />
                    </StackLayout>

                    <StackLayout
                        Grid.Column="1"
                        Orientation="Horizontal"
                        StyleClass="column1">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ToggleDropdownCommand}" />
                        </StackLayout.GestureRecognizers>

                        <Label
                            FontFamily="{StaticResource RobotoLight}"
                            StyleClass="title, fs-large, fc-darkgrey"
                            Text="{classes:Translate SIDEBAR_TITLE_TASKS}"
                            VerticalOptions="CenterAndExpand" />
                        <Label
                            Margin="5,0,0,0"
                            FontFamily="{StaticResource RobotoLight}"
                            StyleClass="title, fs-large, fc-darkgrey"
                            Text="{Binding Title}"
                            VerticalOptions="CenterAndExpand" />
                        <Label
                            FontFamily="{StaticResource MaterialFontFamily}"
                            StyleClass="title, font, fs-large, pt-5"
                            Text="{x:Static classes:IconFont.ExpandMore}"
                            VerticalOptions="CenterAndExpand" />

                    </StackLayout>

                    <StackLayout
                        Grid.Column="2"
                        HorizontalOptions="End"
                        Orientation="Horizontal">
                        <Label
                            FontFamily="{StaticResource RobotoLight}"
                            StyleClass="title, fs-small, fc-darkgrey"
                            Text="{Binding Interval}"
                            VerticalOptions="CenterAndExpand" />
                        <Button
                            Command="{Binding NavigateToReportFilterCommand}"
                            FontFamily="{DynamicResource MaterialFontFamily}"
                            StyleClass="fontButton, fs-42, fc-darkgrey"
                            Text="{x:Static classes:IconFont.FilterList}"
                            VerticalOptions="CenterAndExpand" />
                    </StackLayout>
                </Grid>

                <Grid Grid.Row="1" ColumnSpacing="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.098*" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <!--  Side menu  -->
                    <partial:MenuNewControl Grid.Column="0" StyleClass="bg-darkblue, fc-white" />

                    <!--  Detail Page  -->
                    <syncfusion:SfPullToRefresh
                        Grid.Column="1"
                        BackgroundColor="{StaticResource BackgroundColor}"
                        IsRefreshing="{Binding IsRefreshing}"
                        ProgressColor="#0003E8"
                        PullingThreshold="100"
                        RefreshCommand="{Binding RefreshCommand}"
                        RefreshViewHeight="30"
                        RefreshViewThreshold="30"
                        RefreshViewWidth="30"
                        VerticalOptions="FillAndExpand">

                        <syncfusion:SfPullToRefresh.PullableContent>

                            <Grid>

                                <!--  Detail Page  -->
                                <Grid
                                    Padding="20"
                                    ColumnSpacing="20"
                                    RowSpacing="20">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50*" />
                                        <ColumnDefinition Width="50*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50*" />
                                        <RowDefinition Height="50*" />
                                    </Grid.RowDefinitions>

                                    <!--  Quadrant 1  -->
                                    <Grid
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Padding="20"
                                        BackgroundColor="White"
                                        RowSpacing="0">

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="50" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Label
                                            Grid.Row="0"
                                            FontFamily="{StaticResource RobotoMedium}"
                                            HorizontalTextAlignment="Center"
                                            StyleClass="fs-20, fc-dimgray"
                                            Text="{classes:Translate HOW_OFTEN_DID_WE_DO_TASKS}" />

                                        <Grid Grid.Row="1" IsVisible="{Binding HasItemsQ1, Converter={StaticResource ReverseBooleanConverter}}">
                                            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                                <Image Source="nolcn.png" />
                                                <Label
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    StyleClass="fs-22"
                                                    Text="{classes:Translate EMPTY_SCREEN_TEXT}" />
                                            </StackLayout>
                                        </Grid>

                                        <listview:SfListView
                                            Grid.Row="1"
                                            Padding="0"
                                            AutoFitMode="None"
                                            ItemSize="200"
                                            ItemSpacing="6"
                                            ItemsSource="{Binding BindingContext.Tasks, Source={x:Reference Page}}"
                                            SelectionMode="None"
                                            TapCommand="{Binding BindingContext.TapCommand, Source={x:Reference Page}}">
                                            <listview:SfListView.ItemsLayout>
                                                <listview:GridLayout x:Name="GridLayout" />
                                            </listview:SfListView.ItemsLayout>
                                            <listview:SfListView.ItemTemplate>
                                                <DataTemplate>

                                                    <Grid HorizontalOptions="FillAndExpand">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="*" />
                                                            <RowDefinition Height="15" />
                                                        </Grid.RowDefinitions>

                                                        <Border
                                                            Grid.Row="0"
                                                            Padding="0"
                                                            BackgroundColor="Transparent"
                                                            StrokeThickness="0">
                                                            <Border.StrokeShape>
                                                                <RoundRectangle CornerRadius="1" />
                                                            </Border.StrokeShape>
                                                            <Grid RowSpacing="0">
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="{Binding ., Converter={StaticResource ReportsCountConverter}, ConverterParameter=All}" />
                                                                    <RowDefinition Height="{Binding ., Converter={StaticResource ReportsCountConverter}, ConverterParameter=Count}" />
                                                                </Grid.RowDefinitions>
                                                                <Border
                                                                    Grid.Row="1"
                                                                    BackgroundColor="{StaticResource GreyColor}"
                                                                    StrokeThickness="0">
                                                                    <Grid RowSpacing="0">
                                                                        <Grid.RowDefinitions>
                                                                            <RowDefinition Height="{Binding ., Converter={StaticResource ReportsCountConverter}, ConverterParameter=NotDone}" />
                                                                            <RowDefinition Height="{Binding ., Converter={StaticResource ReportsCountConverter}, ConverterParameter=Done}" />
                                                                        </Grid.RowDefinitions>
                                                                        <Label
                                                                            FontFamily="{StaticResource RobotoRegular}"
                                                                            HorizontalOptions="Center"
                                                                            StyleClass="fs-10"
                                                                            Text="{Binding NrTodo, Converter={StaticResource AboveThousandsConverter}}"
                                                                            TextColor="White"
                                                                            VerticalOptions="Center" />
                                                                        <Border
                                                                            Grid.Row="1"
                                                                            BackgroundColor="{StaticResource BlueColor}"
                                                                            StrokeThickness="0" />
                                                                    </Grid>
                                                                </Border>
                                                            </Grid>
                                                        </Border>
                                                        <Label
                                                            FontFamily="{StaticResource RobotoRegular}"
                                                            HorizontalOptions="Center"
                                                            StyleClass="fs-10"
                                                            Text="{Binding NrDone, Converter={StaticResource AboveThousandsConverter}}"
                                                            TextColor="White"
                                                            VerticalOptions="End" />
                                                        <Label
                                                            Grid.Row="1"
                                                            FontFamily="{StaticResource RobotoLight}"
                                                            HorizontalOptions="Center"
                                                            LineBreakMode="NoWrap"
                                                            StyleClass="fs-8"
                                                            Text="{Binding Subscript}"
                                                            VerticalOptions="Start" />
                                                    </Grid>

                                                </DataTemplate>
                                            </listview:SfListView.ItemTemplate>
                                        </listview:SfListView>

                                    </Grid>
                                    <Grid
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        IsVisible="{Binding IsBusyQ1}">

                                        <Grid BackgroundColor="White" Opacity="0.9" />
                                        <busyindicator:SfBusyIndicator
                                            AnimationType="Cupertino"
                                            IndicatorColor="{StaticResource BusyIndicatorColor}"
                                            IsRunning="{Binding IsBusyQ1}"
                                            SizeFactor="0.3" />

                                    </Grid>

                                    <!--  Quadrant 2  -->
                                    <Grid
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Padding="20"
                                        BackgroundColor="White"
                                        RowSpacing="0">

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="50" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Label
                                            FontFamily="{StaticResource RobotoMedium}"
                                            HorizontalTextAlignment="Center"
                                            StyleClass="fs-20, fc-dimgray"
                                            Text="{classes:Translate HOW_DID_WE_PERFORM}" />

                                        <Grid Grid.Row="1" IsVisible="{Binding HasItemsQ2, Converter={StaticResource ReverseBooleanConverter}}">
                                            <StackLayout
                                                CompressedLayout.IsHeadless="True"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center">
                                                <Image IsOpaque="True" Source="nolcn.png" />
                                                <Label
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    StyleClass="fs-22"
                                                    Text="{classes:Translate EMPTY_SCREEN_TEXT}" />
                                            </StackLayout>
                                        </Grid>
                                        <!--  How did we perform ListView  -->
                                        <listview:SfListView
                                            x:Name="HowDidWePerformListView"
                                            Grid.Row="1"
                                            Padding="0"
                                            AutoFitMode="None"
                                            ItemSize="200"
                                            ItemSpacing="6"
                                            ItemsSource="{Binding BindingContext.Tasks, Source={x:Reference Page}}"
                                            SelectionMode="None">
                                            <listview:SfListView.ItemsLayout>
                                                <listview:GridLayout x:Name="GridLayout2" />
                                            </listview:SfListView.ItemsLayout>
                                            <listview:SfListView.ItemTemplate>
                                                <DataTemplate>
                                                    <controls:TaskPerformBars Counts="{Binding .}" />
                                                </DataTemplate>
                                            </listview:SfListView.ItemTemplate>
                                        </listview:SfListView>

                                    </Grid>
                                    <Grid
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        IsVisible="{Binding IsBusyQ2}">

                                        <Grid BackgroundColor="White" Opacity="0.9" />
                                        <busyindicator:SfBusyIndicator
                                            AnimationType="Cupertino"
                                            IndicatorColor="{StaticResource BusyIndicatorColor}"
                                            IsRunning="{Binding IsBusyQ2}"
                                            SizeFactor="0.3" />

                                    </Grid>

                                    <!--  Quadrant 3  -->
                                    <Grid
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Padding="20"
                                        BackgroundColor="White"
                                        RowSpacing="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="35" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Label
                                            FontFamily="{StaticResource RobotoMedium}"
                                            HorizontalTextAlignment="Center"
                                            StyleClass="fs-20, fc-dimgray"
                                            Text="{classes:Translate WHICH_TOP_5_DEVIATIONS}" />

                                        <Grid Grid.Row="1" IsVisible="{Binding HasItemsQ3, Converter={StaticResource ReverseBooleanConverter}}">
                                            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                                <Image Source="nolcn.png" />
                                                <Label
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    StyleClass="fs-22"
                                                    Text="{classes:Translate EMPTY_SCREEN_TEXT}" />
                                            </StackLayout>
                                        </Grid>

                                        <Grid
                                            Grid.Row="1"
                                            ColumnSpacing="0"
                                            RowSpacing="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="30" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="60" />
                                            </Grid.ColumnDefinitions>

                                            <StackLayout
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Orientation="Horizontal">

                                                <Label
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    FontSize="10"
                                                    Text="{classes:Translate REPORTS_TASKS_DEVIATIONS_SHOW_TITLE}"
                                                    TextColor="{StaticResource DarkGreyColor}"
                                                    VerticalOptions="Center" />

                                                <combobox:SfComboBox
                                                    HeightRequest="40"
                                                    IsClearButtonVisible="False"
                                                    IsEditable="False"
                                                    ItemsSource="{Binding Status}"
                                                    ShowBorder="False"
                                                    TextColor="{StaticResource DarkGreyColor}"
                                                    WidthRequest="150">
                                                    <combobox:SfComboBox.Behaviors>
                                                        <behaviors:EventToCommandBehavior Command="{Binding ChangeStatusCommand}" EventName="SelectionChanged" />
                                                    </combobox:SfComboBox.Behaviors>
                                                    <combobox:SfComboBox.CustomView>
                                                        <Border
                                                            Padding="10,2,0,5"
                                                            BackgroundColor="{StaticResource BackgroundColor}"
                                                            StrokeThickness="0"
                                                            VerticalOptions="Center">
                                                            <Border.StrokeShape>
                                                                <RoundRectangle CornerRadius="3" />
                                                            </Border.StrokeShape>
                                                            <Label
                                                                x:Name="customLabel"
                                                                FontSize="Small"
                                                                HeightRequest="20"
                                                                Text="{Binding SelectedStatus}"
                                                                VerticalTextAlignment="Center" />
                                                        </Border>
                                                    </combobox:SfComboBox.CustomView>
                                                </combobox:SfComboBox>

                                            </StackLayout>

                                            <StackLayout Grid.Column="1">
                                                <Border
                                                    Padding="0"
                                                    BackgroundColor="{StaticResource BackgroundColor}"
                                                    HeightRequest="26"
                                                    HorizontalOptions="Fill"
                                                    VerticalOptions="Center">
                                                    <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="10" />
                                                    </Border.StrokeShape>
                                                    <Grid ColumnSpacing="0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="0.5*" />
                                                            <ColumnDefinition Width="0.5*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Border
                                                            Grid.Column="0"
                                                            Padding="0"
                                                            BackgroundColor="Transparent"
                                                            StrokeThickness="0">
                                                            <Border.StrokeShape>
                                                                <RoundRectangle CornerRadius="10" />
                                                            </Border.StrokeShape>
                                                            <Border.Triggers>
                                                                <DataTrigger
                                                                    Binding="{Binding ShowPercentage}"
                                                                    TargetType="Border"
                                                                    Value="True">
                                                                    <Setter Property="BackgroundColor" Value="{StaticResource GreenColor}" />
                                                                </DataTrigger>
                                                            </Border.Triggers>
                                                            <Label
                                                                FontFamily="{StaticResource RobotoLight}"
                                                                FontSize="10"
                                                                HorizontalOptions="Center"
                                                                Text="%"
                                                                TextColor="{StaticResource DarkGreyColor}"
                                                                VerticalOptions="Center">
                                                                <Label.Triggers>
                                                                    <DataTrigger
                                                                        Binding="{Binding ShowPercentage}"
                                                                        TargetType="Label"
                                                                        Value="True">
                                                                        <Setter Property="TextColor" Value="White" />
                                                                    </DataTrigger>
                                                                </Label.Triggers>
                                                            </Label>
                                                        </Border>
                                                        <Border
                                                            Grid.Column="1"
                                                            Padding="0"
                                                            BackgroundColor="Transparent"
                                                            StrokeThickness="0">
                                                            <Border.StrokeShape>
                                                                <RoundRectangle CornerRadius="10" />
                                                            </Border.StrokeShape>
                                                            <Border.Triggers>
                                                                <DataTrigger
                                                                    Binding="{Binding ShowPercentage}"
                                                                    TargetType="Border"
                                                                    Value="False">
                                                                    <Setter Property="BackgroundColor" Value="{StaticResource GreenColor}" />
                                                                </DataTrigger>
                                                            </Border.Triggers>
                                                            <Label
                                                                FontFamily="{StaticResource RobotoLight}"
                                                                FontSize="10"
                                                                HorizontalOptions="Center"
                                                                Text="#"
                                                                TextColor="{StaticResource DarkGreyColor}"
                                                                VerticalOptions="Center">
                                                                <Label.Triggers>
                                                                    <DataTrigger
                                                                        Binding="{Binding ShowPercentage}"
                                                                        TargetType="Label"
                                                                        Value="False">
                                                                        <Setter Property="TextColor" Value="White" />
                                                                    </DataTrigger>
                                                                </Label.Triggers>
                                                            </Label>
                                                        </Border>
                                                    </Grid>
                                                </Border>
                                            </StackLayout>
                                            <buttons:SfButton
                                                Grid.Column="1"
                                                Background="Transparent"
                                                Command="{Binding ChangePercentageCommand}"
                                                StrokeThickness="0" />

                                            <listview:SfListView
                                                Grid.Row="1"
                                                Grid.ColumnSpan="2"
                                                Padding="0"
                                                AutoFitMode="None"
                                                ItemSize="36"
                                                ItemSpacing="0"
                                                ItemsSource="{Binding BindingContext.Deviations, Source={x:Reference Page}}"
                                                SelectionMode="None">
                                                <listview:SfListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid ColumnSpacing="0" RowSpacing="0">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="*" />
                                                                <RowDefinition Height="1" />
                                                            </Grid.RowDefinitions>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="60" />
                                                            </Grid.ColumnDefinitions>

                                                            <Grid>
                                                                <Grid Padding="0,3,10,3">

                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="{Binding CalculatedPercentage, Converter={StaticResource PercentToGridLengthConverter}}" />
                                                                        <ColumnDefinition Width="{Binding CalculatedPercentage, Converter={StaticResource PercentToGridLengthConverter}, ConverterParameter=False}" />
                                                                    </Grid.ColumnDefinitions>

                                                                    <Grid BackgroundColor="{Binding BindingContext.TaskStatus, Source={x:Reference Page}, Converter={StaticResource StatusToColorConverter}}" Opacity="{Binding BindingContext.TaskStatus, Source={x:Reference Page}, Converter={StaticResource StatusToOpacityConverter}}" />

                                                                </Grid>

                                                                <Label
                                                                    Grid.Row="0"
                                                                    Padding="10,0,15,0"
                                                                    FontFamily="{StaticResource RobotoRegular}"
                                                                    FontSize="12"
                                                                    HorizontalOptions="Start"
                                                                    Text="{Binding Name}"
                                                                    TextColor="{StaticResource DarkerGreyColor}"
                                                                    VerticalOptions="Center" />

                                                            </Grid>

                                                            <Label
                                                                Grid.Row="0"
                                                                Grid.Column="1"
                                                                FontFamily="{StaticResource RobotoRegular}"
                                                                FontSize="Medium"
                                                                HorizontalOptions="Center"
                                                                Text="{Binding DisplayAmount}"
                                                                TextColor="{StaticResource RedColor}"
                                                                VerticalOptions="Center" />

                                                            <Grid
                                                                Grid.Row="1"
                                                                Grid.ColumnSpan="2"
                                                                BackgroundColor="{StaticResource BackgroundColor}" />

                                                        </Grid>
                                                    </DataTemplate>
                                                </listview:SfListView.ItemTemplate>
                                            </listview:SfListView>

                                        </Grid>

                                    </Grid>
                                    <Grid
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        IsVisible="{Binding IsBusyQ3}">

                                        <Grid BackgroundColor="White" Opacity="0.9" />
                                        <busyindicator:SfBusyIndicator
                                            AnimationType="Cupertino"
                                            IndicatorColor="{StaticResource BusyIndicatorColor}"
                                            IsRunning="{Binding IsBusyQ3}"
                                            SizeFactor="0.3" />

                                    </Grid>

                                    <!--  Quadrant 4  -->
                                    <Grid
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Padding="20"
                                        BackgroundColor="White"
                                        RowSpacing="0">

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="35" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Label
                                            FontFamily="{StaticResource RobotoMedium}"
                                            HorizontalTextAlignment="Center"
                                            StyleClass="fs-20, fc-dimgray"
                                            Text="{classes:Translate DO_WE_FOLLOW_UP_ON_DEVIATIONS}" />

                                        <Grid Grid.Row="1" IsVisible="{Binding HasItemsQ4, Converter={StaticResource ReverseBooleanConverter}}">
                                            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                                <Image Source="nolcn.png" />
                                                <Label
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    StyleClass="fs-22"
                                                    Text="{classes:Translate EMPTY_SCREEN_TEXT}" />
                                            </StackLayout>
                                        </Grid>

                                        <Grid
                                            Grid.Row="1"
                                            ColumnSpacing="0"
                                            RowSpacing="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="30" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="70" />
                                                <ColumnDefinition Width="70" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Label
                                                Grid.Column="0"
                                                FontFamily="{StaticResource RobotoLight}"
                                                FontSize="10"
                                                HorizontalOptions="Center"
                                                Text="{classes:Translate SIDEBAR_TITLE_ACTIONS}"
                                                TextColor="{StaticResource DarkGreyColor}"
                                                VerticalOptions="Center" />
                                            <Label
                                                Grid.Column="1"
                                                FontFamily="{StaticResource RobotoLight}"
                                                FontSize="10"
                                                HorizontalOptions="Center"
                                                Text="{classes:Translate REPORT_DEVIATION_TITLE_DONE}"
                                                TextColor="{StaticResource DarkGreyColor}"
                                                VerticalOptions="Center" />

                                            <listview:SfListView
                                                Grid.Row="1"
                                                Grid.ColumnSpan="3"
                                                Padding="0"
                                                AutoFitMode="None"
                                                ItemSize="36"
                                                ItemSpacing="0"
                                                ItemsSource="{Binding BindingContext.Deviations, Source={x:Reference Page}}"
                                                SelectionMode="None"
                                                TapCommand="{Binding NavigateToActionsCommand}">

                                                <listview:SfListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid ColumnSpacing="0" RowSpacing="0">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="*" />
                                                                <RowDefinition Height="1" />
                                                            </Grid.RowDefinitions>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="70" />
                                                                <ColumnDefinition Width="70" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>

                                                            <Label
                                                                Grid.Row="0"
                                                                Grid.Column="0"
                                                                FontFamily="{StaticResource RobotoRegular}"
                                                                FontSize="Medium"
                                                                HorizontalOptions="Center"
                                                                Text="{Binding ActionCount}"
                                                                TextColor="{StaticResource DarkGreyColor}"
                                                                VerticalOptions="Center" />
                                                            <Label
                                                                Grid.Row="0"
                                                                Grid.Column="1"
                                                                FontFamily="{StaticResource RobotoRegular}"
                                                                FontSize="Medium"
                                                                HorizontalOptions="Center"
                                                                Text="{Binding ActionDoneCount}"
                                                                TextColor="{StaticResource DarkGreyColor}"
                                                                VerticalOptions="Center" />

                                                            <Grid
                                                                Grid.Row="0"
                                                                Grid.Column="2"
                                                                Padding="30,5,0,5">
                                                                <Border BackgroundColor="{StaticResource GreyColor}" StrokeThickness="0">
                                                                    <Border.StrokeShape>
                                                                        <RoundRectangle CornerRadius="3" />
                                                                    </Border.StrokeShape>
                                                                    <Grid ColumnSpacing="0">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="{Binding PercentageActionDone, Converter={StaticResource PercentToGridLengthConverter}}" />
                                                                            <!--  PercentToGridLengthConverter  -->
                                                                            <ColumnDefinition Width="{Binding PercentageActionDone, Converter={StaticResource PercentToGridLengthConverter}, ConverterParameter=False}" />
                                                                        </Grid.ColumnDefinitions>

                                                                        <Grid BackgroundColor="{StaticResource GreenColor}">
                                                                            <Label
                                                                                FontFamily="{StaticResource RobotoRegular}"
                                                                                FontSize="Small"
                                                                                HorizontalOptions="Center"
                                                                                Text="{Binding PercentageActionDone, StringFormat='{0}%'}"
                                                                                TextColor="White"
                                                                                VerticalOptions="Center" />
                                                                        </Grid>
                                                                    </Grid>
                                                                </Border>
                                                            </Grid>

                                                            <Grid
                                                                Grid.Row="1"
                                                                Grid.ColumnSpan="3"
                                                                BackgroundColor="{StaticResource BackgroundColor}" />

                                                        </Grid>
                                                    </DataTemplate>
                                                </listview:SfListView.ItemTemplate>
                                            </listview:SfListView>

                                        </Grid>

                                    </Grid>
                                    <Grid
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        IsVisible="{Binding IsBusyQ4}">

                                        <Grid BackgroundColor="White" Opacity="0.9" />
                                        <busyindicator:SfBusyIndicator
                                            AnimationType="Cupertino"
                                            IndicatorColor="{StaticResource BusyIndicatorColor}"
                                            IsRunning="{Binding IsBusyQ4}"
                                            SizeFactor="0.3" />

                                    </Grid>

                                </Grid>

                                <StackLayout CascadeInputTransparent="False" InputTransparent="True">
                                    <controls:MessageCenter />
                                </StackLayout>

                            </Grid>

                        </syncfusion:SfPullToRefresh.PullableContent>

                    </syncfusion:SfPullToRefresh>

                </Grid>

            </Grid>

            <Grid
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                AbsoluteLayout.LayoutFlags="WidthProportional,HeightProportional"
                IsVisible="{Binding IsDropdownOpen}">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding BindingContext.CloseDropdownCommand, Source={x:Reference Page}}" />
                </Grid.GestureRecognizers>
            </Grid>

            <!--  Filter Dropdown  -->
            <Border
                AbsoluteLayout.LayoutBounds="{Binding Rect}"
                AbsoluteLayout.LayoutFlags="WidthProportional,HeightProportional,YProportional"
                BackgroundColor="Transparent"
                HorizontalOptions="Center"
                IsVisible="{Binding IsDropdownOpen}"
                Stroke="Transparent"
                StrokeThickness="0"
                VerticalOptions="Center">

                <treeview:SfTreeView
                    x:Name="treeView"
                    Grid.Row="1"
                    BackgroundColor="White"
                    ChildPropertyName="Children"
                    ItemTemplateContextType="Node"
                    ItemsSource="{Binding WorkAreas}"
                    NodeSizeMode="Dynamic"
                    TapCommand="{Binding DropdownTapCommand}">
                    <treeview:SfTreeView.Behaviors>
                        <behaviors:TreeViewAutoSizeBehavior>
                            <behaviors:TreeViewAutoSizeBehavior.ZeroLevelNodeHeight>
                                <OnPlatform x:TypeArguments="x:Int32">
                                    <On Platform="iOS">60</On>
                                    <On Platform="Android,Windows">100</On>
                                </OnPlatform>
                            </behaviors:TreeViewAutoSizeBehavior.ZeroLevelNodeHeight>
                        </behaviors:TreeViewAutoSizeBehavior>
                    </treeview:SfTreeView.Behaviors>
                    <treeview:SfTreeView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <Grid
                                        Grid.Column="1"
                                        Padding="10,6,0,6"
                                        RowSpacing="1"
                                        VerticalOptions="Center">
                                        <Label
                                            FontFamily="{StaticResource RobotoLight}"
                                            FontSize="Title"
                                            Text="{Binding Content.Name}"
                                            TextColor="Black"
                                            VerticalOptions="CenterAndExpand"
                                            VerticalTextAlignment="Center" />
                                    </Grid>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </treeview:SfTreeView.ItemTemplate>
                </treeview:SfTreeView>
            </Border>

        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>
