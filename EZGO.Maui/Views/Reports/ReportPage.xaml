<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:EZGO.Maui.Controls;assembly=EZGO.Maui"
    xmlns:behaviors="clr-namespace:EZGO.Maui.Behaviors;assembly=EZGO.Maui"
    xmlns:partial="clr-namespace:EZGO.Maui.Views.Partial"
    xmlns:classes="clr-namespace:EZGO.Maui.Classes;assembly=EZGO.Maui"
    xmlns:treeview="clr-namespace:Syncfusion.Maui.TreeView;assembly=Syncfusion.Maui.TreeView"
    xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
    xmlns:models="clr-namespace:EZGO.Maui.Core.Models.Areas;assembly=EZGO.Maui.Core"
    xmlns:syncfusion="clr-namespace:Syncfusion.Maui.PullToRefresh;assembly=Syncfusion.Maui.PullToRefresh"
    xmlns:busyindicator="http://schemas.syncfusion.com/maui"
    xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
    ios:Page.UseSafeArea="true"
    NavigationPage.HasNavigationBar="false"
    NavigationPage.HasBackButton="True"
    xmlns:converter="clr-namespace:EZGO.Maui.Core.Converter;assembly=EZGO.Maui.Core"
    x:Class="EZGO.Maui.Views.ReportPage"
    x:Name="Page"
    Title="Reporting">
    <ContentPage.Content>

        <AbsoluteLayout AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="WidthProportional,HeightProportional">

            <Grid
                ColumnSpacing="0"
                RowSpacing="0"
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                AbsoluteLayout.LayoutFlags="WidthProportional,HeightProportional">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.127*" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--  header  -->
                <Grid
                    StyleClass="header, bg-white, m-0, pr-15"
                    RowSpacing="0"
                    ColumnSpacing="0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                        <!--  width depending on number of children  -->
                        <ColumnDefinition Width="200" />
                    </Grid.ColumnDefinitions>

                    <StackLayout
                        Grid.Column="0"
                        StyleClass="column0"
                        VerticalOptions="CenterAndExpand" />

                    <StackLayout
                        Grid.Column="1"
                        StyleClass="column1"
                        Orientation="Horizontal">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ToggleDropdownCommand}" />
                        </StackLayout.GestureRecognizers>

                        <Label
                            Text="{Binding Title}"
                            StyleClass="title, fs-large, fc-darkgrey"
                            FontFamily="{StaticResource RobotoLight}"
                            VerticalOptions="CenterAndExpand" />
                        <Label
                            Text="{x:Static classes:IconFont.ExpandMore}"
                            FontFamily="{StaticResource MaterialFontFamily}"
                            StyleClass="title, font, fs-large, pt-5"
                            VerticalOptions="CenterAndExpand" />

                    </StackLayout>

                </Grid>

                <Grid Grid.Row="1" ColumnSpacing="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.098*" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <!--  Side menu  -->
                    <partial:MenuNewControl Grid.Column="0" StyleClass="bg-darkblue, fc-white" />

                    <!--  Detail Page  -->
                    <syncfusion:SfPullToRefresh
                        PullingThreshold="100"
                        VerticalOptions="FillAndExpand"
                        RefreshViewHeight="30"
                        RefreshViewThreshold="30"
                        ProgressColor="#0003E8"
                        RefreshViewWidth="30"
                        BackgroundColor="{StaticResource BackgroundColor}"
                        Grid.Column="1"
                        IsRefreshing="{Binding IsRefreshing}"
                        RefreshCommand="{Binding RefreshCommand}">

                        <syncfusion:SfPullToRefresh.PullableContent>

                            <Grid>

                                <Grid
                                    Padding="20"
                                    RowSpacing="20"
                                    ColumnSpacing="20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50*" />
                                        <ColumnDefinition Width="50*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50*" />
                                        <RowDefinition Height="50*" />
                                    </Grid.RowDefinitions>

                                    <!--  Quadrant 1  -->
                                    <Grid
                                        Grid.Column="0"
                                        Grid.Row="0"
                                        RowSpacing="0"
                                        ColumnSpacing="0"
                                        BackgroundColor="White">
                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding NavigateToTaskReportCommand}" />
                                        </Grid.GestureRecognizers>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="0.7*" />
                                            <RowDefinition Height="2*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Label
                                            Text="{classes:Translate DE_WE_EXECUTE_PLANNED_TASKS}"
                                            FontFamily="{StaticResource RobotoMedium}"
                                            StyleClass="fs-20, fc-dimgray"
                                            HorizontalTextAlignment="Center"
                                            VerticalOptions="CenterAndExpand" />
                                        <Grid
                                            x:Name="LabelsGridQ1"
                                            Grid.Row="1"
                                            Padding="15,0,15,5"
                                            RowSpacing="5">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>

                                            <Grid
                                                Grid.Row="0"
                                                HorizontalOptions="FillAndExpand"
                                                ColumnSpacing="0">

                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1.3*" />
                                                    <ColumnDefinition Width="6*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    Text="{classes:Translate REPORTS_TODAY_TITLE}"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    StyleClass="fs-12, fc-dimgray"
                                                    LineBreakMode="WordWrap"
                                                    VerticalOptions="Center"
                                                    HorizontalOptions="StartAndExpand" />

                                                <Grid
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    Padding="0"
                                                    ColumnSpacing="0"
                                                    RowSpacing="0">

                                                    <controls:ReportBars Stats="{Binding TasksStats.TasksToday}" />

                                                </Grid>

                                                <Label
                                                    Text="{Binding TasksStats.TasksToday.Total}"
                                                    StyleClass="fs-16, fc-dimgray"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    VerticalOptions="Center"
                                                    Grid.Row="0"
                                                    Grid.Column="2"
                                                    HorizontalOptions="EndAndExpand"
                                                    VerticalTextAlignment="Center" />

                                            </Grid>

                                            <Grid
                                                Grid.Row="1"
                                                HorizontalOptions="FillAndExpand"
                                                ColumnSpacing="0">

                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1.3*" />
                                                    <ColumnDefinition Width="6*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    Text="{classes:Translate REPORTS_LAST_WEEK_TITLE}"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    StyleClass="fs-12"
                                                    LineBreakMode="WordWrap"
                                                    VerticalOptions="Center"
                                                    HorizontalOptions="StartAndExpand" />

                                                <Grid
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    Padding="0"
                                                    ColumnSpacing="0"
                                                    RowSpacing="0">

                                                    <controls:ReportBars Stats="{Binding TasksStats.Tasks7Day}" />

                                                </Grid>
                                                <Label
                                                    Text="{Binding TasksStats.Tasks7Day.Total}"
                                                    StyleClass="fs-16, fc-dimgray"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    VerticalOptions="Center"
                                                    Grid.Row="0"
                                                    Grid.Column="2"
                                                    HorizontalOptions="EndAndExpand"
                                                    VerticalTextAlignment="Center" />
                                            </Grid>

                                            <Grid
                                                Grid.Row="2"
                                                HorizontalOptions="FillAndExpand"
                                                ColumnSpacing="0">

                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1.3*" />
                                                    <ColumnDefinition Width="6*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    Text="{classes:Translate REPORTS_LAST_MONTH_TITLE}"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    StyleClass="fs-12"
                                                    LineBreakMode="WordWrap"
                                                    VerticalOptions="Center"
                                                    HorizontalOptions="StartAndExpand" />

                                                <Grid
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    Padding="0"
                                                    ColumnSpacing="0"
                                                    RowSpacing="0">

                                                    <controls:ReportBars Stats="{Binding TasksStats.Tasks30Day}" />

                                                </Grid>

                                                <Label
                                                    Text="{Binding TasksStats.Tasks30Day.Total}"
                                                    StyleClass="fs-16, fc-dimgray"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    VerticalOptions="Center"
                                                    Grid.Row="0"
                                                    Grid.Column="2"
                                                    HorizontalOptions="EndAndExpand"
                                                    VerticalTextAlignment="Center"
                                                    x:Name="Tasks30DayTotal" />
                                            </Grid>

                                        </Grid>
                                        <Grid Grid.Row="2" BackgroundColor="{StaticResource LightGreyColor}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="1" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <StackLayout
                                                Grid.Column="0"
                                                Orientation="Vertical"
                                                HorizontalOptions="CenterAndExpand"
                                                VerticalOptions="CenterAndExpand">
                                                <Label
                                                    Text="{Binding TasksStats.MyTasksDone}"
                                                    StyleClass="fs-24, fc-dimgray"
                                                    HorizontalTextAlignment="Center" />

                                                <Label
                                                    Text="{classes:Translate NUMBER_OF_TASKS_YOU_EXECUTE_TODAY}"
                                                    StyleClass="fs-12"
                                                    FontFamily="{StaticResource RobotoRegular}"
                                                    HorizontalTextAlignment="Center" />

                                            </StackLayout>

                                            <StackLayout
                                                Grid.Column="1"
                                                BackgroundColor="{StaticResource BackgroundColor}"
                                                VerticalOptions="FillAndExpand" />

                                            <StackLayout
                                                Grid.Column="2"
                                                Orientation="Vertical"
                                                HorizontalOptions="CenterAndExpand"
                                                VerticalOptions="CenterAndExpand">

                                                <Label
                                                    Text="{Binding TasksStats.MyTasksSkipped}"
                                                    StyleClass="fs-24, fc-dimgray"
                                                    HorizontalTextAlignment="Center" />

                                                <Label
                                                    Text="{classes:Translate NUMBER_OF_TASKS_SKIPPED_TODAY}"
                                                    StyleClass="fs-12"
                                                    FontFamily="{StaticResource RobotoRegular}"
                                                    HorizontalTextAlignment="Center" />

                                            </StackLayout>
                                        </Grid>
                                    </Grid>
                                    <Grid
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        IsVisible="{Binding IsBusy}">
                                        <Grid BackgroundColor="White" Opacity="0.9" />
                                        <busyindicator:SfBusyIndicator
                                            AnimationType="Cupertino"
                                            SizeFactor="0.3"
                                            IndicatorColor="{StaticResource BusyIndicatorColor}"
                                            IsRunning="{Binding IsBusy}" />

                                    </Grid>

                                    <!--  Quadrant 2  -->
                                    <Grid
                                        Grid.Column="1"
                                        Grid.Row="0"
                                        ColumnSpacing="0"
                                        RowSpacing="0"
                                        BackgroundColor="White"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="FillAndExpand">
                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding NavigateToChecklistReportCommand}" />
                                        </Grid.GestureRecognizers>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="0.7*" />
                                            <RowDefinition Height="2*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Label
                                            Text="{classes:Translate WHAT_DID_OUR_CHECKS_SHOW}"
                                            FontFamily="{StaticResource RobotoMedium}"
                                            StyleClass="fs-20, fc-dimgray"
                                            HorizontalTextAlignment="Center"
                                            VerticalOptions="CenterAndExpand" />

                                        <Grid
                                            x:Name="LabelsGridQ2"
                                            Grid.Row="1"
                                            Padding="15,0,15,5"
                                            RowSpacing="5">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>

                                            <Grid
                                                Grid.Row="0"
                                                HorizontalOptions="FillAndExpand"
                                                ColumnSpacing="0">

                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1.3*" />
                                                    <ColumnDefinition Width="6*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    Text="{classes:Translate REPORTS_TODAY_TITLE}"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    StyleClass="fs-12"
                                                    LineBreakMode="WordWrap"
                                                    VerticalOptions="Center"
                                                    HorizontalOptions="StartAndExpand" />

                                                <Grid
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    Padding="0"
                                                    ColumnSpacing="0"
                                                    RowSpacing="0">

                                                    <controls:ReportBars Stats="{Binding ChecklistStats.ChecklistsToday}" />

                                                </Grid>

                                                <Label
                                                    Text="{Binding ChecklistStats.ChecklistsToday.DoneNr}"
                                                    StyleClass="fs-16, fc-dimgray"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    VerticalOptions="Center"
                                                    Grid.Row="0"
                                                    Grid.Column="2"
                                                    HorizontalOptions="EndAndExpand"
                                                    VerticalTextAlignment="Center" />

                                            </Grid>

                                            <Grid
                                                Grid.Row="1"
                                                HorizontalOptions="FillAndExpand"
                                                ColumnSpacing="0">

                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1.3*" />
                                                    <ColumnDefinition Width="6*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    Text="{classes:Translate REPORTS_LAST_WEEK_TITLE}"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    StyleClass="fs-12"
                                                    LineBreakMode="WordWrap"
                                                    VerticalOptions="Center"
                                                    HorizontalOptions="StartAndExpand" />

                                                <Grid
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    Padding="0"
                                                    ColumnSpacing="0"
                                                    RowSpacing="0">

                                                    <controls:ReportBars Stats="{Binding ChecklistStats.Checklists7Day}" />

                                                </Grid>

                                                <Label
                                                    Text="{Binding ChecklistStats.Checklists7Day.DoneNr}"
                                                    StyleClass="fs-16, fc-dimgray"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    VerticalOptions="Center"
                                                    Grid.Row="0"
                                                    Grid.Column="2"
                                                    HorizontalOptions="EndAndExpand"
                                                    VerticalTextAlignment="Center" />
                                            </Grid>

                                            <Grid
                                                Grid.Row="2"
                                                HorizontalOptions="FillAndExpand"
                                                ColumnSpacing="0">

                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1.3*" />
                                                    <ColumnDefinition Width="6*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    Text="{classes:Translate REPORTS_LAST_MONTH_TITLE}"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    StyleClass="fs-12"
                                                    LineBreakMode="WordWrap"
                                                    VerticalOptions="Center"
                                                    HorizontalOptions="StartAndExpand" />

                                                <Grid
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    Padding="0"
                                                    ColumnSpacing="0"
                                                    RowSpacing="0">

                                                    <controls:ReportBars Stats="{Binding ChecklistStats.Checklists30Day}" />

                                                </Grid>

                                                <Label
                                                    Text="{Binding ChecklistStats.Checklists30Day.DoneNr}"
                                                    StyleClass="fs-16, fc-dimgray"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    VerticalOptions="Center"
                                                    Grid.Row="0"
                                                    Grid.Column="2"
                                                    HorizontalOptions="EndAndExpand"
                                                    VerticalTextAlignment="Center" />
                                            </Grid>

                                        </Grid>

                                        <Grid Grid.Row="2" BackgroundColor="{StaticResource LightGreyColor}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <StackLayout
                                                Grid.Column="0"
                                                Orientation="Vertical"
                                                HorizontalOptions="CenterAndExpand"
                                                VerticalOptions="CenterAndExpand">
                                                <Label
                                                    Text="{Binding ChecklistStats.MyChecklistsDone}"
                                                    StyleClass="fs-24, fc-dimgray"
                                                    HorizontalTextAlignment="Center" />

                                                <Label
                                                    Text="{classes:Translate NUMBER_OF_CHECKLISTS_YOU_COMPLETED_TODAY}"
                                                    StyleClass="fs-12"
                                                    FontFamily="{StaticResource RobotoRegular}"
                                                    HorizontalTextAlignment="Center" />

                                            </StackLayout>
                                        </Grid>

                                    </Grid>
                                    <Grid
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        IsVisible="{Binding IsBusy}">
                                        <Grid BackgroundColor="White" Opacity="0.9" />
                                        <busyindicator:SfBusyIndicator
                                            AnimationType="Cupertino"
                                            SizeFactor="0.3"
                                            IndicatorColor="{StaticResource BusyIndicatorColor}"
                                            IsRunning="{Binding IsBusy}" />

                                    </Grid>

                                    <!--  Quadrant 3  -->
                                    <Grid
                                        Grid.Column="0"
                                        Grid.Row="1"
                                        BackgroundColor="White">
                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding NavigateToAuditReportCommand}" />
                                        </Grid.GestureRecognizers>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="0.8*" />
                                            <RowDefinition Height="2*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Label
                                            Text="{classes:Translate WHAT_ARE_THE_LATEST_AUDITS_RESULTS}"
                                            StyleClass="fs-20, fc-dimgray"
                                            FontFamily="{StaticResource RobotoMedium}"
                                            HorizontalTextAlignment="Center"
                                            VerticalOptions="Center" />
                                        <Grid
                                            x:Name="LabelsGridQ3"
                                            Grid.Row="1"
                                            Padding="15,0"
                                            RowSpacing="5">

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>

                                            <Grid
                                                Grid.Row="0"
                                                HorizontalOptions="FillAndExpand"
                                                ColumnSpacing="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1.3*" />
                                                    <ColumnDefinition Width="6*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    Text="{classes:Translate REPORTS_TODAY_TITLE}"
                                                    StyleClass="fs-12"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    LineBreakMode="WordWrap"
                                                    VerticalOptions="Center" />

                                                <Grid
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    RowSpacing="0"
                                                    HorizontalOptions="FillAndExpand"
                                                    VerticalOptions="FillAndExpand">

                                                    <Border
                                                        StrokeThickness="0"
                                                        Padding="0"
                                                        Margin="0,7">
                                                        <Border.StrokeShape>
                                                            <RoundRectangle CornerRadius="3" />
                                                        </Border.StrokeShape>
                                                        <Border.Background>
                                                            <LinearGradientBrush>
                                                                <GradientStop Color="{StaticResource RedColor}" Offset="0.0" />
                                                                <GradientStop Color="{StaticResource GreyColor}" Offset="0.5" />
                                                                <GradientStop Color="{StaticResource GreenColor}" Offset="1.0" />
                                                            </LinearGradientBrush>
                                                        </Border.Background>
                                                    </Border>

                                                    <Grid ColumnSpacing="0" IsVisible="{Binding IsBusy, Converter={StaticResource ReverseBooleanConverter}}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="{Binding AuditStats.AuditToday.Percentage, Converter={StaticResource PercentToGridLengthConverter}}" />
                                                            <ColumnDefinition Width="26" />
                                                            <ColumnDefinition Width="{Binding AuditStats.AuditToday.Percentage, Converter={StaticResource PercentToGridLengthConverter}, ConverterParameter=False}" />
                                                        </Grid.ColumnDefinitions>

                                                        <Border
                                                            Grid.Column="1"
                                                            BackgroundColor="White"
                                                            HeightRequest="26"
                                                            WidthRequest="26"
                                                            StrokeThickness="0"
                                                            HorizontalOptions="CenterAndExpand"
                                                            VerticalOptions="CenterAndExpand">
                                                            <Border.StrokeShape>
                                                                <RoundRectangle CornerRadius="13" />
                                                            </Border.StrokeShape>
                                                            <Border.Content>
                                                                <Label
                                                                    Text="{Binding AuditStats.AuditToday.Percentage}"
                                                                    FontSize="14"
                                                                    TextColor="{StaticResource DarkGreyColor}"
                                                                    VerticalOptions="Center"
                                                                    HorizontalOptions="Center"
                                                                    FontFamily="{StaticResource RobotoRegular}" />
                                                            </Border.Content>
                                                        </Border>

                                                    </Grid>

                                                </Grid>

                                                <Label
                                                    Text="{Binding AuditStats.AuditToday.DoneNr}"
                                                    StyleClass="fs-16, fc-dimgray"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    VerticalOptions="Center"
                                                    Grid.Row="0"
                                                    Grid.Column="2"
                                                    HorizontalOptions="EndAndExpand"
                                                    VerticalTextAlignment="Center" />

                                            </Grid>

                                            <Grid
                                                Grid.Row="1"
                                                HorizontalOptions="FillAndExpand"
                                                ColumnSpacing="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1.3*" />
                                                    <ColumnDefinition Width="6*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    StyleClass="fs-12"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    LineBreakMode="WordWrap"
                                                    Text="{classes:Translate REPORTS_LAST_WEEK_TITLE}"
                                                    VerticalOptions="Center" />

                                                <Grid
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    RowSpacing="0"
                                                    HorizontalOptions="FillAndExpand"
                                                    VerticalOptions="FillAndExpand">

                                                    <Border
                                                        StrokeThickness="0"
                                                        Padding="0"
                                                        Margin="0,7">
                                                        <Border.StrokeShape>
                                                            <RoundRectangle CornerRadius="3" />
                                                        </Border.StrokeShape>
                                                        <Border.Background>
                                                            <LinearGradientBrush>
                                                                <GradientStop Color="{StaticResource RedColor}" Offset="0.0" />
                                                                <GradientStop Color="{StaticResource GreyColor}" Offset="0.5" />
                                                                <GradientStop Color="{StaticResource GreenColor}" Offset="1.0" />
                                                            </LinearGradientBrush>
                                                        </Border.Background>
                                                    </Border>

                                                    <Grid ColumnSpacing="0" IsVisible="{Binding IsBusy, Converter={StaticResource ReverseBooleanConverter}}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="{Binding AuditStats.Audit7Day.Percentage, Converter={StaticResource PercentToGridLengthConverter}}" />
                                                            <ColumnDefinition Width="26" />
                                                            <ColumnDefinition Width="{Binding AuditStats.Audit7Day.Percentage, Converter={StaticResource PercentToGridLengthConverter}, ConverterParameter=False}" />
                                                        </Grid.ColumnDefinitions>

                                                        <Border
                                                            Grid.Column="1"
                                                            BackgroundColor="White"
                                                            HeightRequest="26"
                                                            WidthRequest="26"
                                                            StrokeThickness="0"
                                                            HorizontalOptions="CenterAndExpand"
                                                            VerticalOptions="CenterAndExpand">
                                                            <Border.StrokeShape>
                                                                <RoundRectangle CornerRadius="13" />
                                                            </Border.StrokeShape>
                                                            <Border.Content>
                                                                <Label
                                                                    Text="{Binding AuditStats.Audit7Day.Percentage}"
                                                                    FontSize="14"
                                                                    TextColor="{StaticResource DarkGreyColor}"
                                                                    VerticalOptions="Center"
                                                                    HorizontalOptions="Center"
                                                                    FontFamily="{StaticResource RobotoRegular}" />
                                                            </Border.Content>
                                                        </Border>
                                                    </Grid>
                                                </Grid>

                                                <Label
                                                    Text="{Binding AuditStats.Audit7Day.DoneNr}"
                                                    StyleClass="fs-16, fc-dimgray"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    VerticalOptions="Center"
                                                    Grid.Row="0"
                                                    Grid.Column="2"
                                                    HorizontalOptions="EndAndExpand"
                                                    VerticalTextAlignment="Center" />

                                            </Grid>

                                            <Grid
                                                Grid.Row="2"
                                                HorizontalOptions="FillAndExpand"
                                                ColumnSpacing="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1.3*" />
                                                    <ColumnDefinition Width="6*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    StyleClass="fs-12"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    LineBreakMode="WordWrap"
                                                    Text="{classes:Translate REPORTS_LAST_MONTH_TITLE}"
                                                    VerticalOptions="Center" />

                                                <Grid
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    RowSpacing="0"
                                                    HorizontalOptions="FillAndExpand"
                                                    VerticalOptions="FillAndExpand">

                                                    <Border
                                                        StrokeThickness="0"
                                                        Padding="0"
                                                        Margin="0,7">
                                                        <Border.StrokeShape>
                                                            <RoundRectangle CornerRadius="3" />
                                                        </Border.StrokeShape>
                                                        <Border.Background>
                                                            <LinearGradientBrush>
                                                                <GradientStop Color="{StaticResource RedColor}" Offset="0.0" />
                                                                <GradientStop Color="{StaticResource GreyColor}" Offset="0.5" />
                                                                <GradientStop Color="{StaticResource GreenColor}" Offset="1.0" />
                                                            </LinearGradientBrush>
                                                        </Border.Background>
                                                    </Border>

                                                    <Grid ColumnSpacing="0" IsVisible="{Binding IsBusy, Converter={StaticResource ReverseBooleanConverter}}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="{Binding AuditStats.Audit30Day.Percentage, Converter={StaticResource PercentToGridLengthConverter}}" />
                                                            <ColumnDefinition Width="26" />
                                                            <ColumnDefinition Width="{Binding AuditStats.Audit30Day.Percentage, Converter={StaticResource PercentToGridLengthConverter}, ConverterParameter=False}" />
                                                        </Grid.ColumnDefinitions>

                                                        <Border
                                                            Grid.Column="1"
                                                            BackgroundColor="White"
                                                            HeightRequest="26"
                                                            WidthRequest="26"
                                                            StrokeThickness="0"
                                                            HorizontalOptions="CenterAndExpand"
                                                            VerticalOptions="CenterAndExpand">
                                                            <Border.StrokeShape>
                                                                <RoundRectangle CornerRadius="13" />
                                                            </Border.StrokeShape>
                                                            <Border.Content>
                                                                <Label
                                                                    Text="{Binding AuditStats.Audit30Day.Percentage}"
                                                                    FontSize="14"
                                                                    TextColor="{StaticResource DarkGreyColor}"
                                                                    VerticalOptions="Center"
                                                                    HorizontalOptions="Center"
                                                                    FontFamily="{StaticResource RobotoRegular}" />
                                                            </Border.Content>
                                                        </Border>
                                                    </Grid>

                                                </Grid>

                                                <Label
                                                    Text="{Binding AuditStats.Audit30Day.DoneNr}"
                                                    StyleClass="fs-16, fc-dimgray"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    VerticalOptions="Center"
                                                    Grid.Row="0"
                                                    Grid.Column="2"
                                                    HorizontalOptions="EndAndExpand"
                                                    VerticalTextAlignment="Center" />

                                            </Grid>

                                        </Grid>
                                        <Grid Grid.Row="2" BackgroundColor="{StaticResource LightGreyColor}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <StackLayout
                                                Grid.Column="0"
                                                Orientation="Vertical"
                                                HorizontalOptions="CenterAndExpand"
                                                VerticalOptions="CenterAndExpand">
                                                <Label
                                                    Text="{Binding AuditStats.MyAuditsDone}"
                                                    StyleClass="fs-24, fc-dimgray"
                                                    HorizontalTextAlignment="Center" />

                                                <Label
                                                    Text="{classes:Translate NUMBER_OF_AUDITS_YOU_COMPLETED_TODAY}"
                                                    StyleClass="fs-12"
                                                    FontFamily="{StaticResource RobotoRegular}"
                                                    HorizontalTextAlignment="Center" />

                                            </StackLayout>
                                        </Grid>
                                    </Grid>
                                    <Grid
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        IsVisible="{Binding IsBusy}">
                                        <Grid BackgroundColor="White" Opacity="0.9" />
                                        <busyindicator:SfBusyIndicator
                                            AnimationType="Cupertino"
                                            SizeFactor="0.3"
                                            IndicatorColor="{StaticResource BusyIndicatorColor}"
                                            IsRunning="{Binding IsBusy}" />
                                    </Grid>

                                    <!--  Quadrant 4  -->
                                    <Grid
                                        Grid.Column="1"
                                        Grid.Row="1"
                                        BackgroundColor="White">
                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding NavigateToActionReportCommand}" />
                                        </Grid.GestureRecognizers>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="0.8*" />
                                            <RowDefinition Height="2*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Label
                                            Text="{classes:Translate DO_WE_FOLLOW_UP_ON_DEVIATIONS}"
                                            StyleClass="fs-20, fc-dimgray"
                                            FontFamily="{StaticResource RobotoMedium}"
                                            HorizontalTextAlignment="Center"
                                            VerticalTextAlignment="Center" />
                                        <StackLayout
                                            Grid.Row="1"
                                            Padding="15,0"
                                            Orientation="Vertical"
                                            VerticalOptions="FillAndExpand"
                                            HorizontalOptions="FillAndExpand">

                                            <Grid
                                                x:Name="GridQ4"
                                                HorizontalOptions="FillAndExpand"
                                                VerticalOptions="FillAndExpand"
                                                RowSpacing="12">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="0.7*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="0.8*" />
                                                </Grid.ColumnDefinitions>

                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="15" />
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="1" />
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="1" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>

                                                <!--  row 0  -->
                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    Text="{classes:Translate REPORTS_NEW_ACTIONS_TITLE}"
                                                    FontFamily="{StaticResource RobotoRegular}"
                                                    StyleClass="fs-12"
                                                    VerticalTextAlignment="End"
                                                    HorizontalTextAlignment="Center" />

                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="2"
                                                    Text="{classes:Translate REPORTS_DONE_ACTIONS_TITLE}"
                                                    FontFamily="{StaticResource RobotoRegular}"
                                                    StyleClass="fs-12"
                                                    VerticalTextAlignment="End"
                                                    HorizontalTextAlignment="Center" />

                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="3"
                                                    Text="{classes:Translate REPORTS_OPEN_ACTIONS_TITLE}"
                                                    FontFamily="{StaticResource RobotoRegular}"
                                                    StyleClass="fs-12"
                                                    VerticalTextAlignment="End"
                                                    HorizontalTextAlignment="Center" />

                                                <!--  row 1  -->
                                                <Label
                                                    Grid.Row="1"
                                                    Grid.Column="0"
                                                    Text="{classes:Translate REPORTS_TODAY_TITLE}"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    StyleClass="fs-12"
                                                    VerticalTextAlignment="Center" />

                                                <Label
                                                    Grid.Row="1"
                                                    Grid.Column="1"
                                                    Text="{Binding ActionStats.ActionsToday.Todo}"
                                                    StyleClass="fs-16, fc-dimgray"
                                                    FontFamily="{StaticResource RobotoMedium}"
                                                    VerticalTextAlignment="Center"
                                                    HorizontalTextAlignment="Center" />

                                                <Label
                                                    Grid.Row="1"
                                                    Grid.Column="2"
                                                    Text="{Binding ActionStats.ActionsToday.Ok}"
                                                    StyleClass="fs-16, fc-dimgray"
                                                    FontFamily="{StaticResource RobotoMedium}"
                                                    VerticalTextAlignment="Center"
                                                    HorizontalTextAlignment="Center" />

                                                <!--  row 2  -->
                                                <StackLayout
                                                    Grid.Row="2"
                                                    Grid.Column="0"
                                                    Grid.ColumnSpan="3"
                                                    VerticalOptions="Start"
                                                    HeightRequest="1"
                                                    BackgroundColor="{StaticResource LightGreyColor}" />

                                                <!--  row 3  -->
                                                <Label
                                                    Grid.Row="3"
                                                    Grid.Column="0"
                                                    Text="{classes:Translate REPORTS_LAST_WEEK_TITLE}"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    StyleClass="fs-12"
                                                    VerticalTextAlignment="Center" />

                                                <Label
                                                    Grid.Row="3"
                                                    Grid.Column="1"
                                                    Text="{Binding ActionStats.Actions7Day.Todo}"
                                                    StyleClass="fs-16, fc-dimgray"
                                                    FontFamily="{StaticResource RobotoMedium}"
                                                    VerticalTextAlignment="Center"
                                                    HorizontalTextAlignment="Center" />

                                                <Label
                                                    Grid.Row="3"
                                                    Grid.Column="2"
                                                    Text="{Binding ActionStats.Actions7Day.Ok}"
                                                    StyleClass="fs-16, fc-dimgray"
                                                    FontFamily="{StaticResource RobotoMedium}"
                                                    VerticalTextAlignment="Center"
                                                    HorizontalTextAlignment="Center" />

                                                <!--  row 4  -->
                                                <StackLayout
                                                    Grid.Row="4"
                                                    Grid.Column="0"
                                                    Grid.ColumnSpan="3"
                                                    VerticalOptions="Start"
                                                    HeightRequest="1"
                                                    BackgroundColor="{StaticResource LightGreyColor}" />

                                                <!--  row 5  -->
                                                <Label
                                                    Grid.Row="5"
                                                    Grid.Column="0"
                                                    Text="{classes:Translate REPORTS_LAST_MONTH_TITLE}"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    StyleClass="fs-12"
                                                    VerticalTextAlignment="Center" />

                                                <Label
                                                    Grid.Row="5"
                                                    Grid.Column="1"
                                                    Text="{Binding ActionStats.Actions30Day.Todo}"
                                                    StyleClass="fs-16, fc-dimgray"
                                                    FontFamily="{StaticResource RobotoMedium}"
                                                    VerticalTextAlignment="Center"
                                                    HorizontalTextAlignment="Center" />

                                                <Label
                                                    Grid.Row="5"
                                                    Grid.Column="2"
                                                    Text="{Binding ActionStats.Actions30Day.Ok}"
                                                    StyleClass="fs-16, fc-dimgray"
                                                    FontFamily="{StaticResource RobotoMedium}"
                                                    VerticalTextAlignment="Center"
                                                    HorizontalTextAlignment="Center" />

                                                <Border
                                                    Grid.Row="1"
                                                    Grid.RowSpan="5"
                                                    Grid.Column="3"
                                                    BackgroundColor="{StaticResource GreyColor}"
                                                    StrokeThickness="0"
                                                    Padding="0"
                                                    Margin="0">
                                                    <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="3" />
                                                    </Border.StrokeShape>
                                                    <Grid RowSpacing="0">

                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="{Binding ActionStats.ActionsOpen.PercentageTodo, Converter={StaticResource PercentToGridLengthConverter}}" />
                                                            <RowDefinition Height="{Binding ActionStats.ActionsOpen.PercentageNotOk, Converter={StaticResource PercentToGridLengthConverter}}" />
                                                        </Grid.RowDefinitions>

                                                        <Label
                                                            Grid.Row="0"
                                                            Text="{Binding ActionStats.ActionsOpen.Todo}"
                                                            StyleClass="fc-white"
                                                            HorizontalOptions="CenterAndExpand"
                                                            VerticalOptions="CenterAndExpand" />

                                                        <Grid Grid.Row="1" BackgroundColor="{StaticResource RedColor}">
                                                            <Label
                                                                Text="{Binding ActionStats.ActionsOpen.NotOk}"
                                                                StyleClass="fc-white"
                                                                HorizontalOptions="CenterAndExpand"
                                                                VerticalOptions="CenterAndExpand" />
                                                        </Grid>

                                                    </Grid>
                                                </Border>
                                            </Grid>
                                        </StackLayout>
                                        <Grid
                                            Grid.Row="2"
                                            BackgroundColor="{StaticResource LightGreyColor}"
                                            HorizontalOptions="FillAndExpand"
                                            VerticalOptions="FillAndExpand">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="19*" />
                                                <ColumnDefinition Width="1" />
                                                <ColumnDefinition Width="19*" />
                                                <ColumnDefinition Width="1" />
                                                <ColumnDefinition Width="19*" />
                                                <ColumnDefinition Width="1" />
                                                <ColumnDefinition Width="19*" />
                                                <ColumnDefinition Width="1" />
                                                <ColumnDefinition Width="19*" />
                                            </Grid.ColumnDefinitions>

                                            <StackLayout
                                                Grid.Column="0"
                                                Orientation="Vertical"
                                                HorizontalOptions="CenterAndExpand"
                                                VerticalOptions="CenterAndExpand">
                                                <Label
                                                    Text="{classes:Translate YOUR_ACTION_STATUS}"
                                                    FontFamily="{StaticResource RobotoRegular}"
                                                    StyleClass="fs-12, ml-15" />
                                            </StackLayout>

                                            <StackLayout Grid.Column="1" BackgroundColor="{StaticResource BackgroundColor}" />

                                            <StackLayout
                                                Grid.Column="2"
                                                Orientation="Vertical"
                                                HorizontalOptions="CenterAndExpand"
                                                VerticalOptions="CenterAndExpand">
                                                <Label
                                                    Text="{Binding ActionStats.MyActionsStarted}"
                                                    StyleClass="fs-24, fc-dimgray"
                                                    FontFamily="{StaticResource RobotoRegular}"
                                                    HorizontalTextAlignment="Center" />
                                                <Label
                                                    Text="{classes:Translate NUMBER_STARTED}"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    StyleClass="fs-12" />
                                            </StackLayout>

                                            <StackLayout Grid.Column="3" BackgroundColor="{StaticResource BackgroundColor}" />

                                            <StackLayout
                                                Grid.Column="4"
                                                Orientation="Vertical"
                                                HorizontalOptions="CenterAndExpand"
                                                VerticalOptions="CenterAndExpand">
                                                <Label
                                                    Text="{Binding ActionStats.MyActionsDone}"
                                                    StyleClass="fs-24, fc-dimgray"
                                                    FontFamily="{StaticResource RobotoRegular}"
                                                    HorizontalTextAlignment="Center" />
                                                <Label
                                                    Text="{classes:Translate NUMBER_COMPLETED}"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    StyleClass="fs-12" />
                                            </StackLayout>

                                            <StackLayout Grid.Column="5" BackgroundColor="{StaticResource BackgroundColor}" />

                                            <StackLayout
                                                Grid.Column="6"
                                                Orientation="Vertical"
                                                HorizontalOptions="CenterAndExpand"
                                                VerticalOptions="CenterAndExpand">
                                                <Label
                                                    Text="{Binding ActionStats.MyActionsOpen}"
                                                    StyleClass="fs-24, fc-dimgray"
                                                    FontFamily="{StaticResource RobotoRegular}"
                                                    HorizontalTextAlignment="Center" />
                                                <Label
                                                    Text="{classes:Translate NUMBER_OPEN}"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    StyleClass="fs-12" />
                                            </StackLayout>

                                            <StackLayout Grid.Column="7" BackgroundColor="{StaticResource BackgroundColor}" />

                                            <StackLayout
                                                Grid.Column="8"
                                                Orientation="Vertical"
                                                HorizontalOptions="CenterAndExpand"
                                                VerticalOptions="CenterAndExpand">
                                                <Label
                                                    Text="{Binding ActionStats.MyActionsPastDue}"
                                                    StyleClass="fs-24, fc-dimgray"
                                                    FontFamily="{StaticResource RobotoRegular}"
                                                    HorizontalTextAlignment="Center" />

                                                <Label
                                                    Text="{classes:Translate NUMBER_OVERDUE}"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    StyleClass="fs-12" />
                                            </StackLayout>

                                        </Grid>
                                    </Grid>
                                    <Grid
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        IsVisible="{Binding IsBusy}">
                                        <Grid BackgroundColor="White" Opacity="0.9" />
                                        <busyindicator:SfBusyIndicator
                                            AnimationType="Cupertino"
                                            SizeFactor="0.3"
                                            IndicatorColor="{StaticResource BusyIndicatorColor}"
                                            IsRunning="{Binding IsBusy}" />
                                    </Grid>
                                </Grid>
                                <StackLayout InputTransparent="True" CascadeInputTransparent="False">
                                    <controls:MessageCenter />
                                </StackLayout>

                            </Grid>
                        </syncfusion:SfPullToRefresh.PullableContent>
                    </syncfusion:SfPullToRefresh>


                </Grid>

            </Grid>

            <Grid
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                AbsoluteLayout.LayoutFlags="WidthProportional,HeightProportional"
                IsVisible="{Binding IsDropdownOpen}">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding BindingContext.CloseDropdownCommand, Source={x:Reference Page}}" />
                </Grid.GestureRecognizers>
            </Grid>

            <!--  Filter Dropdown  -->
            <Border
                Stroke="Transparent"
                StrokeThickness="0"
                BackgroundColor="Transparent"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                IsVisible="{Binding IsDropdownOpen}"
                AbsoluteLayout.LayoutBounds="{Binding Rect}"
                AbsoluteLayout.LayoutFlags="WidthProportional,HeightProportional,YProportional">

                <treeview:SfTreeView
                    x:Name="treeView"
                    Grid.Row="1"
                    ChildPropertyName="Children"
                    NodeSizeMode="Dynamic"
                    ItemsSource="{Binding WorkAreas}"
                    BackgroundColor="White"
                    TapCommand="{Binding DropdownTapCommand}">
                    <treeview:SfTreeView.Behaviors>
                        <behaviors:TreeViewAutoSizeBehavior>
                            <behaviors:TreeViewAutoSizeBehavior.ZeroLevelNodeHeight>
                                <OnPlatform x:TypeArguments="x:Int32">
                                    <On Platform="iOS">60</On>
                                    <On Platform="Android,Windows">100</On>
                                </OnPlatform>
                            </behaviors:TreeViewAutoSizeBehavior.ZeroLevelNodeHeight>
                        </behaviors:TreeViewAutoSizeBehavior>
                    </treeview:SfTreeView.Behaviors>
                    <treeview:SfTreeView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <Grid
                                        Grid.Column="1"
                                        RowSpacing="1"
                                        Padding="10,6,0,6"
                                        VerticalOptions="Center">
                                        <Label
                                            Text="{Binding Name}"
                                            VerticalTextAlignment="Center"
                                            TextColor="Black"
                                            FontSize="Title"
                                            VerticalOptions="CenterAndExpand"
                                            FontFamily="{StaticResource RobotoLight}" />
                                    </Grid>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </treeview:SfTreeView.ItemTemplate>
                </treeview:SfTreeView>
            </Border>

        </AbsoluteLayout>

    </ContentPage.Content>
</ContentPage>
