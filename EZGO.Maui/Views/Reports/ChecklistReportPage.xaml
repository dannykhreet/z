<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:EZGO.Maui.Controls;assembly=EZGO.Maui"
    xmlns:treeview="clr-namespace:Syncfusion.Maui.TreeView;assembly=Syncfusion.Maui.TreeView"
    xmlns:busyindicator="http://schemas.syncfusion.com/maui"
    xmlns:syncfusion="clr-namespace:Syncfusion.Maui.PullToRefresh;assembly=Syncfusion.Maui.PullToRefresh"
    xmlns:listview="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
    xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
    xmlns:classes="clr-namespace:EZGO.Maui.Classes;assembly=EZGO.Maui"
    xmlns:behaviors="clr-namespace:EZGO.Maui.Behaviors;assembly=EZGO.Maui"
    xmlns:partial="clr-namespace:EZGO.Maui.Views.Partial"
    xmlns:combobox="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
    xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
    ios:Page.UseSafeArea="true"
    NavigationPage.HasNavigationBar="false"
    NavigationPage.HasBackButton="True"
    x:Class="EZGO.Maui.Views.ChecklistReportPage"
    x:Name="Page">
    <ContentPage.Content>
        <AbsoluteLayout AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="WidthProportional,HeightProportional">

            <Grid
                ColumnSpacing="0"
                RowSpacing="0"
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                AbsoluteLayout.LayoutFlags="WidthProportional,HeightProportional">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.127*" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid
                    StyleClass="header, bg-white, m-0, pr-15"
                    RowSpacing="0"
                    ColumnSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="200" />
                    </Grid.ColumnDefinitions>

                    <StackLayout
                        Grid.Column="0"
                        StyleClass="column0"
                        VerticalOptions="CenterAndExpand">
                        <Button
                            Text="{x:Static classes:IconFont.ChevronLeft}"
                            StyleClass="fontButton, fs-42, fc-darkgrey"
                            FontFamily="{StaticResource MaterialFontFamily}"
                            Command="{Binding BindingContext.CancelCommand, Source={x:Reference Page}}"
                            VerticalOptions="CenterAndExpand" />
                    </StackLayout>

                    <StackLayout
                        Grid.Column="1"
                        StyleClass="column1"
                        Orientation="Horizontal">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ToggleDropdownCommand}" />
                        </StackLayout.GestureRecognizers>

                        <Label
                            Text="{classes:Translate SIDEBAR_TITLE_CHECKLIST}"
                            StyleClass="title, fs-large, fc-darkgrey"
                            FontFamily="{StaticResource RobotoLight}"
                            VerticalOptions="CenterAndExpand" />
                        <Label
                            Text="{Binding Title}"
                            Margin="5,0,0,0"
                            StyleClass="title, fs-large, fc-darkgrey"
                            FontFamily="{StaticResource RobotoLight}"
                            VerticalOptions="CenterAndExpand" />
                        <Label
                            Text="{x:Static classes:IconFont.ExpandMore}"
                            FontFamily="{StaticResource MaterialFontFamily}"
                            StyleClass="title, font, fs-large, pt-5"
                            VerticalOptions="CenterAndExpand" />

                    </StackLayout>

                    <StackLayout
                        Grid.Column="2"
                        HorizontalOptions="EndAndExpand"
                        Orientation="Horizontal">
                        <Label
                            FontFamily="{StaticResource RobotoLight}"
                            StyleClass="title, fs-small, fc-darkgrey"
                            Text="{Binding Interval}"
                            VerticalOptions="CenterAndExpand" />
                        <Button
                            Text="{x:Static classes:IconFont.FilterList}"
                            StyleClass="fontButton, fs-42, fc-darkgrey"
                            FontFamily="{DynamicResource MaterialFontFamily}"
                            VerticalOptions="CenterAndExpand"
                            Command="{Binding NavigateToReportFilterCommand}" />
                    </StackLayout>
                </Grid>

                <Grid Grid.Row="1" ColumnSpacing="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.098*" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <!--  Side menu  -->
                    <partial:MenuNewControl Grid.Column="0" StyleClass="bg-darkblue, fc-white" />

                    <!--  Detail Page  -->
                    <syncfusion:SfPullToRefresh
                        PullingThreshold="100"
                        VerticalOptions="FillAndExpand"
                        ProgressColor="#0003E8"
                        RefreshViewHeight="30"
                        RefreshViewThreshold="30"
                        RefreshViewWidth="30"
                        BackgroundColor="{StaticResource BackgroundColor}"
                        Grid.Column="1"
                        IsRefreshing="{Binding IsRefreshing}"
                        RefreshCommand="{Binding RefreshCommand}">

                        <syncfusion:SfPullToRefresh.PullableContent>

                            <Grid>

                                <!--  Detail Page  -->
                                <Grid
                                    Padding="20"
                                    RowSpacing="20"
                                    ColumnSpacing="20">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50*" />
                                        <ColumnDefinition Width="50*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50*" />
                                        <RowDefinition Height="50*" />
                                    </Grid.RowDefinitions>

                                    <!--  Quadrant 1  -->
                                    <Grid
                                        Grid.Column="0"
                                        Grid.Row="0"
                                        BackgroundColor="White"
                                        Padding="20"
                                        RowSpacing="0">

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="50" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Label
                                            Text="{classes:Translate HOW_OFTEN_DID_WE_DO_CHECKLISTS}"
                                            Grid.Row="0"
                                            StyleClass="fs-20, fc-dimgray"
                                            FontFamily="{StaticResource RobotoMedium}"
                                            HorizontalTextAlignment="Center" />

                                        <Grid Grid.Row="1" IsVisible="{Binding HasItemsQ1, Converter={StaticResource ReverseBooleanConverter}}">
                                            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                                <Image Source="nolcn.png" />
                                                <Label
                                                    Text="{classes:Translate EMPTY_SCREEN_TEXT}"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    StyleClass="fs-22" />
                                            </StackLayout>
                                        </Grid>

                                        <Grid Grid.Row="1">
                                            <listview:SfListView
                                                ItemsSource="{Binding BindingContext.Checklists, Source={x:Reference Page}}"
                                                ItemSpacing="6"
                                                Padding="0"
                                                ItemSize="200"
                                                AutoFitMode="None"
                                                SelectionMode="None"
                                                TapCommand="{Binding NavigateToCompletedChecklistsCommand}">
                                                <listview:SfListView.ItemsLayout>
                                                    <listview:GridLayout x:Name="GridLayout" />
                                                </listview:SfListView.ItemsLayout>
                                                <listview:SfListView.ItemTemplate>
                                                    <DataTemplate>

                                                        <Grid HorizontalOptions="FillAndExpand">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="*" />
                                                                <RowDefinition Height="15" />
                                                            </Grid.RowDefinitions>

                                                            <Border
                                                                StrokeThickness="0"
                                                                Padding="0"
                                                                BackgroundColor="Transparent"
                                                                Grid.Row="0">
                                                                <Border.StrokeShape>
                                                                    <RoundRectangle CornerRadius="1" />
                                                                </Border.StrokeShape>
                                                                <Grid RowSpacing="0">
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="{Binding ., Converter={StaticResource ReportsCountConverter}, ConverterParameter=All}" />
                                                                        <RowDefinition Height="{Binding ., Converter={StaticResource ReportsCountConverter}, ConverterParameter=Count}" />
                                                                    </Grid.RowDefinitions>
                                                                    <Border
                                                                        Grid.Row="1"
                                                                        BackgroundColor="{StaticResource BlueColor}"
                                                                        StrokeThickness="0">
                                                                        <Label
                                                                            Text="{Binding CountNr, Converter={StaticResource AboveThousandsConverter}}"
                                                                            VerticalOptions="Center"
                                                                            HorizontalOptions="Center"
                                                                            TextColor="White"
                                                                            StyleClass="fs-10"
                                                                            FontFamily="{StaticResource RobotoRegular}" />

                                                                    </Border>
                                                                </Grid>
                                                            </Border>

                                                            <Label
                                                                Text="{Binding Subscript}"
                                                                Grid.Row="1"
                                                                StyleClass="fs-8"
                                                                FontFamily="{StaticResource RobotoLight}"
                                                                VerticalOptions="Start"
                                                                HorizontalOptions="Center"
                                                                LineBreakMode="NoWrap" />
                                                        </Grid>

                                                    </DataTemplate>
                                                </listview:SfListView.ItemTemplate>
                                            </listview:SfListView>
                                        </Grid>

                                    </Grid>
                                    <Grid
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        IsVisible="{Binding IsBusyQ1}">

                                        <Grid BackgroundColor="White" Opacity="0.9" />
                                        <busyindicator:SfBusyIndicator
                                            AnimationType="Cupertino"
                                            SizeFactor="0.3"
                                            IndicatorColor="{StaticResource BusyIndicatorColor}"
                                            IsRunning="{Binding IsBusyQ1}" />

                                    </Grid>
                                    <!--<buttons:SfButton Grid.Row="0" Grid.Column="0" BackgroundColor="Transparent" Command="{Binding NavigateToCompletedChecklistsCommand}"></buttons:SfButton>-->

                                    <!--  Quadrant 2  -->
                                    <Grid
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        BackgroundColor="White"
                                        Padding="20"
                                        RowSpacing="0">

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="50" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Label
                                            Text="{classes:Translate HOW_DID_WE_PERFORM}"
                                            Grid.Row="0"
                                            StyleClass="fs-20, fc-dimgray"
                                            FontFamily="{StaticResource RobotoMedium}"
                                            HorizontalTextAlignment="Center" />

                                        <Grid Grid.Row="1" IsVisible="{Binding HasItemsQ2, Converter={StaticResource ReverseBooleanConverter}}">
                                            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                                <Image Source="nolcn.png" />
                                                <Label
                                                    Text="{classes:Translate EMPTY_SCREEN_TEXT}"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    StyleClass="fs-22" />
                                            </StackLayout>
                                        </Grid>

                                        <Grid Grid.Row="1">
                                            <listview:SfListView
                                                ItemsSource="{Binding BindingContext.ChecklistItems, Source={x:Reference Page}}"
                                                ItemSpacing="6"
                                                Padding="0"
                                                ItemSize="200"
                                                AutoFitMode="None"
                                                SelectionMode="None">
                                                <listview:SfListView.ItemsLayout>
                                                    <listview:GridLayout x:Name="GridLayout2" />
                                                </listview:SfListView.ItemsLayout>
                                                <listview:SfListView.ItemTemplate>
                                                    <DataTemplate>

                                                        <Grid HorizontalOptions="FillAndExpand">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="*" />
                                                                <RowDefinition Height="15" />
                                                            </Grid.RowDefinitions>

                                                            <Border
                                                                StrokeThickness="0"
                                                                Padding="0"
                                                                BackgroundColor="Transparent"
                                                                Grid.Row="0">
                                                                <Border.StrokeShape>
                                                                    <RoundRectangle CornerRadius="1" />
                                                                </Border.StrokeShape>
                                                                <Grid RowSpacing="0">
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="{Binding ., Converter={StaticResource ReportsCountConverter}, ConverterParameter=Todo}" />
                                                                        <RowDefinition Height="{Binding ., Converter={StaticResource ReportsCountConverter}, ConverterParameter=Skipped}" />
                                                                        <RowDefinition Height="{Binding ., Converter={StaticResource ReportsCountConverter}, ConverterParameter=NotOk}" />
                                                                        <RowDefinition Height="{Binding ., Converter={StaticResource ReportsCountConverter}, ConverterParameter=Ok}" />
                                                                    </Grid.RowDefinitions>
                                                                    <Border
                                                                        Grid.Row="1"
                                                                        BackgroundColor="{StaticResource SkippedColor}"
                                                                        StrokeThickness="0">
                                                                        <Label
                                                                            Text="{Binding NrSkipped, Converter={StaticResource AboveThousandsConverter}}"
                                                                            VerticalOptions="Center"
                                                                            HorizontalOptions="Center"
                                                                            TextColor="White"
                                                                            StyleClass="fs-10"
                                                                            FontFamily="{StaticResource RobotoRegular}" />
                                                                    </Border>
                                                                    <Border
                                                                        Grid.Row="2"
                                                                        BackgroundColor="{StaticResource RedColor}"
                                                                        StrokeThickness="0">
                                                                        <Label
                                                                            Text="{Binding NrNotOk, Converter={StaticResource AboveThousandsConverter}}"
                                                                            VerticalOptions="Center"
                                                                            HorizontalOptions="Center"
                                                                            TextColor="White"
                                                                            StyleClass="fs-10"
                                                                            FontFamily="{StaticResource RobotoRegular}" />
                                                                    </Border>
                                                                    <Border
                                                                        Grid.Row="3"
                                                                        BackgroundColor="{StaticResource GreenColor}"
                                                                        StrokeThickness="0">
                                                                        <Label
                                                                            Text="{Binding NrOk, Converter={StaticResource AboveThousandsConverter}}"
                                                                            VerticalOptions="Center"
                                                                            HorizontalOptions="Center"
                                                                            TextColor="White"
                                                                            StyleClass="fs-10"
                                                                            FontFamily="{StaticResource RobotoRegular}" />
                                                                    </Border>
                                                                </Grid>
                                                            </Border>

                                                            <Label
                                                                Text="{Binding Subscript}"
                                                                Grid.Row="1"
                                                                StyleClass="fs-8"
                                                                FontFamily="{StaticResource RobotoLight}"
                                                                VerticalOptions="Start"
                                                                HorizontalOptions="Center"
                                                                LineBreakMode="NoWrap" />
                                                        </Grid>

                                                    </DataTemplate>
                                                </listview:SfListView.ItemTemplate>
                                            </listview:SfListView>
                                        </Grid>
                                    </Grid>
                                    <Grid
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        IsVisible="{Binding IsBusyQ2}">

                                        <Grid BackgroundColor="White" Opacity="0.9" />
                                        <busyindicator:SfBusyIndicator
                                            AnimationType="Cupertino"
                                            SizeFactor="0.3"
                                            IndicatorColor="{StaticResource BusyIndicatorColor}"
                                            IsRunning="{Binding IsBusyQ2}" />

                                    </Grid>

                                    <!--  Quadrant 3  -->
                                    <Grid
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        BackgroundColor="White"
                                        Padding="20"
                                        RowSpacing="0">

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="35" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Label
                                            Text="{classes:Translate WHICH_TOP_5_DEVIATIONS}"
                                            Grid.Row="0"
                                            StyleClass="fs-20, fc-dimgray"
                                            FontFamily="{StaticResource RobotoMedium}"
                                            HorizontalTextAlignment="Center" />

                                        <Grid Grid.Row="1" IsVisible="{Binding HasItemsQ3, Converter={StaticResource ReverseBooleanConverter}}">
                                            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                                <Image Source="nolcn.png" />
                                                <Label
                                                    Text="{classes:Translate EMPTY_SCREEN_TEXT}"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    StyleClass="fs-22" />
                                            </StackLayout>
                                        </Grid>

                                        <Grid
                                            Grid.Row="1"
                                            ColumnSpacing="0"
                                            RowSpacing="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="30" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="50" />
                                            </Grid.ColumnDefinitions>

                                            <StackLayout
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Orientation="Horizontal">

                                                <Label
                                                    Text="{classes:Translate REPORTS_TASKS_DEVIATIONS_SHOW_TITLE}"
                                                    TextColor="{StaticResource DarkGreyColor}"
                                                    FontSize="10"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    VerticalOptions="Center" />

                                                <combobox:SfComboBox
                                                    HeightRequest="40"
                                                    WidthRequest="150"
                                                    IsEditable="False"
                                                    TextColor="{StaticResource DarkGreyColor}"
                                                    ShowBorder="False"
                                                    IsClearButtonVisible="False"
                                                    ItemsSource="{Binding Status}">
                                                    <combobox:SfComboBox.Behaviors>
                                                        <behaviors:EventToCommandBehavior EventName="SelectionChanged" Command="{Binding ChangeStatusCommand}" />
                                                    </combobox:SfComboBox.Behaviors>
                                                    <combobox:SfComboBox.CustomView>
                                                        <Border
                                                            StrokeThickness="0"
                                                            BackgroundColor="{StaticResource BackgroundColor}"
                                                            Padding="10,2,0,5"
                                                            VerticalOptions="Center">
                                                            <Border.StrokeShape>
                                                                <RoundRectangle CornerRadius="3" />
                                                            </Border.StrokeShape>
                                                            <Label
                                                                x:Name="customLabel"
                                                                HeightRequest="20"
                                                                Text="{Binding SelectedStatus}"
                                                                FontSize="Small"
                                                                VerticalTextAlignment="Center" />
                                                        </Border>
                                                    </combobox:SfComboBox.CustomView>
                                                </combobox:SfComboBox>

                                            </StackLayout>

                                            <Label
                                                Text="#"
                                                Grid.Column="1"
                                                TextColor="{StaticResource DarkGreyColor}"
                                                FontSize="10"
                                                FontFamily="{StaticResource RobotoLight}"
                                                VerticalOptions="Center"
                                                HorizontalOptions="Center" />

                                            <listview:SfListView
                                                Grid.Row="1"
                                                Grid.ColumnSpan="2"
                                                ItemsSource="{Binding BindingContext.Deviations, Source={x:Reference Page}}"
                                                ItemSpacing="0"
                                                Padding="0"
                                                ItemSize="36"
                                                AutoFitMode="None"
                                                SelectionMode="None">
                                                <listview:SfListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid RowSpacing="0" ColumnSpacing="0">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="*" />
                                                                <RowDefinition Height="1" />
                                                            </Grid.RowDefinitions>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="50" />
                                                            </Grid.ColumnDefinitions>
                                                            <Grid>
                                                                <Grid Padding="0,3,10,3">

                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="{Binding CalculatedPercentage, Converter={StaticResource PercentToGridLengthConverter}}" />
                                                                        <ColumnDefinition Width="{Binding CalculatedPercentage, Converter={StaticResource PercentToGridLengthConverter}, ConverterParameter=False}" />
                                                                    </Grid.ColumnDefinitions>

                                                                    <Grid BackgroundColor="{Binding BindingContext.TaskStatus, Source={x:Reference Page}, Converter={StaticResource StatusToColorConverter}}" Opacity="{Binding BindingContext.TaskStatus, Source={x:Reference Page}, Converter={StaticResource StatusToOpacityConverter}}" />

                                                                </Grid>
                                                                <Label
                                                                    Text="{Binding Name}"
                                                                    Grid.Row="0"
                                                                    TextColor="{StaticResource DarkerGreyColor}"
                                                                    FontSize="12"
                                                                    FontFamily="{StaticResource RobotoRegular}"
                                                                    VerticalOptions="Center"
                                                                    HorizontalOptions="Start"
                                                                    Padding="10,0,0,0" />
                                                            </Grid>
                                                            <Label
                                                                Text="{Binding CountNr}"
                                                                Grid.Row="0"
                                                                Grid.Column="1"
                                                                TextColor="{StaticResource RedColor}"
                                                                FontSize="Medium"
                                                                FontFamily="{StaticResource RobotoRegular}"
                                                                VerticalOptions="Center"
                                                                HorizontalOptions="Center" />

                                                            <Grid
                                                                Grid.Row="1"
                                                                Grid.ColumnSpan="2"
                                                                BackgroundColor="{StaticResource BackgroundColor}" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </listview:SfListView.ItemTemplate>
                                            </listview:SfListView>

                                        </Grid>

                                    </Grid>
                                    <Grid
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        IsVisible="{Binding IsBusyQ3}">

                                        <Grid BackgroundColor="White" Opacity="0.9" />
                                        <busyindicator:SfBusyIndicator
                                            AnimationType="Cupertino"
                                            SizeFactor="0.3"
                                            IndicatorColor="{StaticResource BusyIndicatorColor}"
                                            IsRunning="{Binding IsBusyQ3}" />

                                    </Grid>

                                    <!--  Quadrant 4  -->
                                    <Grid
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        BackgroundColor="White"
                                        Padding="20"
                                        RowSpacing="0">

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="35" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Label
                                            Text="{classes:Translate DO_WE_FOLLOW_UP_ON_DEVIATIONS}"
                                            Grid.Row="0"
                                            StyleClass="fs-20, fc-dimgray"
                                            FontFamily="{StaticResource RobotoMedium}"
                                            HorizontalTextAlignment="Center" />

                                        <Grid Grid.Row="1" IsVisible="{Binding HasItemsQ4, Converter={StaticResource ReverseBooleanConverter}}">
                                            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                                <Image Source="nolcn.png" />
                                                <Label
                                                    Text="{classes:Translate EMPTY_SCREEN_TEXT}"
                                                    FontFamily="{StaticResource RobotoLight}"
                                                    StyleClass="fs-22" />
                                            </StackLayout>
                                        </Grid>

                                        <Grid
                                            Grid.Row="1"
                                            ColumnSpacing="0"
                                            RowSpacing="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="30" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="70" />
                                                <ColumnDefinition Width="70" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Label
                                                Text="{classes:Translate SIDEBAR_TITLE_ACTIONS}"
                                                Grid.Column="0"
                                                TextColor="{StaticResource DarkGreyColor}"
                                                FontSize="10"
                                                FontFamily="{StaticResource RobotoLight}"
                                                VerticalOptions="Center"
                                                HorizontalOptions="Center" />
                                            <Label
                                                Text="{classes:Translate REPORT_DEVIATION_TITLE_DONE}"
                                                Grid.Column="1"
                                                TextColor="{StaticResource DarkGreyColor}"
                                                FontSize="10"
                                                FontFamily="{StaticResource RobotoLight}"
                                                VerticalOptions="Center"
                                                HorizontalOptions="Center" />

                                            <listview:SfListView
                                                Grid.Row="1"
                                                Grid.ColumnSpan="3"
                                                ItemsSource="{Binding BindingContext.Deviations, Source={x:Reference Page}}"
                                                ItemSpacing="0"
                                                Padding="0"
                                                ItemSize="36"
                                                AutoFitMode="None"
                                                SelectionMode="None"
                                                TapCommand="{Binding NavigateToActionsCommand}">

                                                <listview:SfListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid RowSpacing="0" ColumnSpacing="0">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="*" />
                                                                <RowDefinition Height="1" />
                                                            </Grid.RowDefinitions>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="70" />
                                                                <ColumnDefinition Width="70" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>

                                                            <Label
                                                                Text="{Binding ActionCount}"
                                                                Grid.Row="0"
                                                                Grid.Column="0"
                                                                TextColor="{StaticResource DarkGreyColor}"
                                                                FontSize="Medium"
                                                                FontFamily="{StaticResource RobotoRegular}"
                                                                VerticalOptions="Center"
                                                                HorizontalOptions="Center" />
                                                            <Label
                                                                Text="{Binding ActionDoneCount}"
                                                                Grid.Row="0"
                                                                Grid.Column="1"
                                                                TextColor="{StaticResource DarkGreyColor}"
                                                                FontSize="Medium"
                                                                FontFamily="{StaticResource RobotoRegular}"
                                                                VerticalOptions="Center"
                                                                HorizontalOptions="Center" />

                                                            <Grid
                                                                Grid.Row="0"
                                                                Grid.Column="2"
                                                                Padding="30,5,0,5">
                                                                <Border BackgroundColor="{StaticResource GreyColor}" StrokeThickness="0">
                                                                    <Border.StrokeShape>
                                                                        <RoundRectangle CornerRadius="3" />
                                                                    </Border.StrokeShape>
                                                                    <Grid ColumnSpacing="0">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="{Binding PercentageActionDone, Converter={StaticResource PercentToGridLengthConverter}}" />
                                                                            <!--  PercentToGridLengthConverter  -->
                                                                            <ColumnDefinition Width="{Binding PercentageActionDone, Converter={StaticResource PercentToGridLengthConverter}, ConverterParameter=False}" />
                                                                        </Grid.ColumnDefinitions>

                                                                        <Grid BackgroundColor="{StaticResource GreenColor}">
                                                                            <Label
                                                                                Text="{Binding PercentageActionDone, StringFormat='{0}%'}"
                                                                                TextColor="White"
                                                                                FontSize="Small"
                                                                                FontFamily="{StaticResource RobotoRegular}"
                                                                                VerticalOptions="Center"
                                                                                HorizontalOptions="Center" />
                                                                        </Grid>
                                                                    </Grid>
                                                                </Border>
                                                            </Grid>

                                                            <Grid
                                                                Grid.Row="1"
                                                                Grid.ColumnSpan="3"
                                                                BackgroundColor="{StaticResource BackgroundColor}" />

                                                        </Grid>
                                                    </DataTemplate>
                                                </listview:SfListView.ItemTemplate>
                                            </listview:SfListView>

                                        </Grid>

                                    </Grid>
                                    <Grid
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        IsVisible="{Binding IsBusyQ4}">

                                        <Grid BackgroundColor="White" Opacity="0.9" />
                                        <busyindicator:SfBusyIndicator
                                            AnimationType="Cupertino"
                                            SizeFactor="0.3"
                                            IndicatorColor="{StaticResource BusyIndicatorColor}"
                                            IsRunning="{Binding IsBusyQ4}" />

                                    </Grid>

                                </Grid>

                                <StackLayout InputTransparent="True" CascadeInputTransparent="False">
                                    <controls:MessageCenter />
                                </StackLayout>

                            </Grid>

                        </syncfusion:SfPullToRefresh.PullableContent>

                    </syncfusion:SfPullToRefresh>

                </Grid>

            </Grid>

            <Grid
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                AbsoluteLayout.LayoutFlags="WidthProportional,HeightProportional"
                IsVisible="{Binding IsDropdownOpen}">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding BindingContext.CloseDropdownCommand, Source={x:Reference Page}}" />
                </Grid.GestureRecognizers>
            </Grid>

            <!--  Filter Dropdown  -->
            <Border
                Stroke="Transparent"
                StrokeThickness="0"
                BackgroundColor="Transparent"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                IsVisible="{Binding IsDropdownOpen}"
                AbsoluteLayout.LayoutBounds="{Binding Rect}"
                AbsoluteLayout.LayoutFlags="WidthProportional,HeightProportional,YProportional">

                <treeview:SfTreeView
                    x:Name="treeView"
                    Grid.Row="1"
                    ChildPropertyName="Children"
                    NodeSizeMode="Dynamic"
                    ItemsSource="{Binding WorkAreas}"
                    BackgroundColor="White"
                    TapCommand="{Binding DropdownTapCommand}">
                    <treeview:SfTreeView.Behaviors>
                        <behaviors:TreeViewAutoSizeBehavior>
                            <behaviors:TreeViewAutoSizeBehavior.ZeroLevelNodeHeight>
                                <OnPlatform x:TypeArguments="x:Int32">
                                    <On Platform="iOS">60</On>
                                    <On Platform="Android,Windows">100</On>
                                </OnPlatform>
                            </behaviors:TreeViewAutoSizeBehavior.ZeroLevelNodeHeight>
                        </behaviors:TreeViewAutoSizeBehavior>
                    </treeview:SfTreeView.Behaviors>
                    <treeview:SfTreeView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <Grid
                                        Grid.Column="1"
                                        RowSpacing="1"
                                        Padding="10,6,0,6"
                                        VerticalOptions="Center">
                                        <Label
                                            Text="{Binding Name}"
                                            VerticalTextAlignment="Center"
                                            TextColor="Black"
                                            FontSize="Title"
                                            VerticalOptions="CenterAndExpand"
                                            FontFamily="{StaticResource RobotoLight}" />
                                    </Grid>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </treeview:SfTreeView.ItemTemplate>
                </treeview:SfTreeView>
            </Border>

        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>
